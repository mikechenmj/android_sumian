<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/space_10"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity">

        <com.hyphenate.helpdesk.easeui.widget.CircularImage
            android:src="@mipmap/ic_chat_left_default"
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:contentDescription="@null"
            tools:ignore="RtlHardcoded" />

        <FrameLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userid"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:layout_toRightOf="@id/iv_userhead"
            android:background="@drawable/bg_chat_left"
            android:padding="@dimen/space_4"
            tools:ignore="RtlHardcoded">

            <View
                android:id="@+id/id_recorder_anim"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/chat_receiver_audio_playing_4" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_length"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bubble"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/bubble"
            android:gravity="center"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/iv_unread_voice"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignTop="@id/bubble"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_length"
            android:contentDescription="@null"
            android:src="@drawable/bg_dot"
            tools:ignore="RtlHardcoded" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_unread_voice"
            android:visibility="invisible"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_nick_margin_left"
            android:layout_toRightOf="@id/iv_userhead"
            android:textSize="@dimen/chat_nick_text_size"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

</LinearLayout>