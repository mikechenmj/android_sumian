<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_10"
    android:orientation="vertical"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffffff"
        tools:text="8月31日 15:40" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity">

        <com.hyphenate.helpdesk.easeui.widget.CircularImage
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:contentDescription="@null"
            android:src="@mipmap/ic_chat_left_default"
            tools:ignore="RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userid"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginRight="32dp"
            android:layout_toRightOf="@id/iv_userhead"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/tv_chatcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="@drawable/bg_chat_left_light"
                android:lineSpacingExtra="2dp"
                android:maxWidth="225.0dip"
                android:minHeight="38dp"
                android:padding="@dimen/space_8"
                android:paddingLeft="6dp"
                android:paddingRight="1dp"
                android:textColor="#475266"
                android:textColorLink="@color/bt_hole_color"
                android:textSize="@dimen/font_16"
                tools:ignore="RtlHardcoded"
                tools:text="小姐姐dadadadsddasdadadadadadadasdadsdadasdaasaaaaasaaaasaaaaaadasaaaaasaaasdadaaadadaddadaaaaaaaaa大大所多多" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_nick_margin_left"
            android:layout_toRightOf="@id/iv_userhead"
            android:textSize="@dimen/chat_nick_text_size"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

</LinearLayout>