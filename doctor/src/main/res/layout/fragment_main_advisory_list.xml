<?xml version="1.0" encoding="utf-8"?>
<com.sumian.sddoctor.widget.SumianSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b1_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sumian.sddoctor.widget.LoadMoreRecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="@dimen/space_10" />

        <com.sumian.sddoctor.widget.EmptyErrorView
            android:id="@+id/empty_error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</com.sumian.sddoctor.widget.SumianSwipeRefreshLayout>