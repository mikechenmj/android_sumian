<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="1dp"
    android:background="@color/b2_color">

    <include layout="@layout/layout_service_item" />

    <View
        android:id="@+id/v_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_30"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_not_open"
        android:layout_width="@dimen/space_60"
        android:layout_height="@dimen/space_60"
        android:layout_gravity="end"
        android:background="@drawable/bg_service_not_open"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            style="@style/text_white_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:rotation="45"
            android:text="@string/not_open_yet" />
    </FrameLayout>

</FrameLayout>