<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/b1_color"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/text_t1_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:background="@color/b2_color"
        android:gravity="center"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:text="@string/logout_title_hint" />

    <TextView
        android:id="@+id/tv_logout"
        style="@style/text_t1_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_62"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/b2_color"
        android:foreground="@drawable/bg_material_ripple"
        android:gravity="center"
        android:text="@string/setting_logout_hint"
        android:textColor="@color/t4_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:background="@color/l1_color" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/text_t1_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/b2_color"
        android:foreground="@drawable/bg_material_ripple"
        android:gravity="center"
        android:padding="@dimen/space_16"
        android:text="@string/cancel" />

</LinearLayout>