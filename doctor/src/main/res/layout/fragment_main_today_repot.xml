<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/space_10"
    android:background="@color/b1_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_62"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/b3_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RelativeOverlap"
            tools:text="2018.05.30" />

        <ImageView
            android:id="@+id/iv_date_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_toEndOf="@id/tv_date"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="centerInside"
            android:src="@drawable/sel_nav_date_arrow"
            android:tint="@color/b3_color" />

    </RelativeLayout>

    <com.sumian.sddoctor.widget.SumianSwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.sumian.sddoctor.service.report.widget.histogram.TouchDailySleepHistogramView
                    android:id="@+id/day_sleep_histogram_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_200"
                    android:gravity="center"
                    app:tdshv_coordinate_color="@color/l3_color_day"
                    app:tdshv_deep_color="@color/g1_color_day"
                    app:tdshv_empty_text_color="@color/t5_color_day"
                    app:tdshv_eog_color="@color/g2_color_day"
                    app:tdshv_light_color="@color/g2_color_day"
                    app:tdshv_sober_color="@color/g3_color_day" />

                <com.sumian.sddoctor.service.report.widget.ReportIndicatorRuleView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_26" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_24"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginBottom="@dimen/space_20"
                    app:cardBackgroundColor="@color/b2_color_day"
                    app:cardCornerRadius="@dimen/space_4"
                    app:cardElevation="0dp"
                    app:contentPadding="@dimen/space_20">

                    <com.sumian.sddoctor.service.report.widget.ReportSleepDurationView
                        android:id="@+id/report_sleep_duration_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.sumian.sddoctor.widget.SumianSwipeRefreshLayout>
</LinearLayout>