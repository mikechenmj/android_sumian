<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b1_color"
    android:orientation="vertical">

    <com.sumian.sddoctor.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="第一周 认识睡眠" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:outlineProvider="none"
            android:translationZ="0dp"
            app:elevation="0dp">

            <com.sumian.sddoctor.service.cbti.widget.CBTIWeekCourseBannerView
                android:id="@+id/cbti_week_lesson_banner_view"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                app:layout_scrollFlags="scroll|enterAlways" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_10"
                android:background="@color/b1_color"
                app:layout_scrollFlags="scroll|enterAlways" />

            <com.sumian.sddoctor.widget.nav.NavigationItem
                android:id="@+id/nav_tab_lesson_summary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_62"
                android:background="@color/b2_color"
                app:layout_scrollFlags="scroll|enterAlways"
                app:tab_icon="@drawable/ic_cbti_icon_exercise"
                app:tab_text="@string/the_week_lesson_summary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_10"
                android:background="@color/b1_color"
                app:layout_scrollFlags="scroll|enterAlways" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>