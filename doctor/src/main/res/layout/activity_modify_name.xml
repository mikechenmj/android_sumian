<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:background="@color/b2_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20">

        <TextView
            android:id="@+id/tv_label"
            style="@style/text_t1_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            style="@style/text_t2_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_64"
            android:layout_marginLeft="@dimen/space_16"
            android:background="@null"
            android:hint="@string/input_name"
            android:inputType="text"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_finish"
        style="@style/bt_t1_style"
        android:layout_marginLeft="@dimen/space_36"
        android:layout_marginTop="@dimen/space_40"
        android:layout_marginRight="@dimen/space_36"
        android:text="@string/finish" />

</LinearLayout>