<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".booking.BookingDetailActivity">

    <com.sumian.sddoctor.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/booking_detail" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/HorizontalDividerLine"
            android:layout_gravity="bottom" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            app:tabIndicatorColor="@color/b3_color"
            app:tabIndicatorHeight="@dimen/space_2"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/b3_color"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="@color/t2_color">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_item_booking_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/booking_information" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_item_patient_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_record" />
        </com.google.android.material.tabs.TabLayout>

    </FrameLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>