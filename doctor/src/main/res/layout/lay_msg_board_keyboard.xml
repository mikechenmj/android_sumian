<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/dialog_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_keyboard"
        android:minHeight="@dimen/space_104"
        android:orientation="vertical"
        android:padding="@dimen/space_10">

        <EditText
            android:id="@+id/et_msg_board_input"
            style="@style/text_t2_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_input"
            android:cursorVisible="true"
            android:gravity="top"
            android:hint="@string/msg_board_hint"
            android:inputType="textMultiLine"
            android:maxHeight="@dimen/space_200"
            android:maxEms="200"
            android:minHeight="@dimen/space_40"
            android:padding="@dimen/space_10"
            android:singleLine="false"
            android:textColorHint="@color/t2_color_day"
            android:textCursorDrawable="@drawable/shape_cursor"
            tools:ignore="Autofill" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_is_anonymous"
                style="@style/text_t2_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_send"
                style="@style/text_white"
                android:layout_width="@dimen/space_68"
                android:layout_height="@dimen/space_36"
                android:background="@drawable/bg_bt_cbti_msg_board"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/send"
                android:textColor="@color/sel_btn_text" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>