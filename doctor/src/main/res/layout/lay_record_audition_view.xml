<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b2_color"
    android:orientation="vertical">

    <TextView
        style="@style/text_t2_16"
        android:layout_margin="@dimen/space_20"
        android:text="@string/click_audition" />

    <com.sumian.common.widget.voice.VoicePlayerView
        android:id="@+id/voice_player_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_44" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_22"
        android:paddingRight="@dimen/space_22">

        <TextView
            android:id="@+id/btn_re_record"
            style="@style/text_b2_14"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_62"
            android:layout_marginEnd="@dimen/space_10"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_t4_corner_50"
            android:elevation="0dp"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="@string/re_record"
            android:translationZ="0dp" />

        <TextView
            android:id="@+id/btn_send"
            style="@style/text_b2_14"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_62"
            android:layout_marginStart="@dimen/space_10"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_b3_corner_50"
            android:elevation="0dp"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="@string/send"
            android:translationZ="0dp" />

    </LinearLayout>

</LinearLayout>