<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b2_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10"
        android:background="@color/l1_color" />

    <TextView
        style="@style/text_t1_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_20"
        android:text="@string/face_status" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_faced"
            style="@style/text_t2_14"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_36"
            android:layout_marginStart="@dimen/space_20"
            android:background="@drawable/bg_faced_status"
            android:gravity="center"
            android:paddingLeft="@dimen/space_14"
            android:paddingRight="@dimen/space_14"
            android:text="@string/is_faced" />

        <TextView
            android:id="@+id/tv_none_faced"
            style="@style/text_t2_14"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_36"
            android:layout_marginStart="@dimen/space_10"
            android:background="@drawable/bg_faced_status"
            android:gravity="center"
            android:paddingLeft="@dimen/space_14"
            android:paddingRight="@dimen/space_14"
            android:text="@string/none_faced" />


    </LinearLayout>

</LinearLayout>