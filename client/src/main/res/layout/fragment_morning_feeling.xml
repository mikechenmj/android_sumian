<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fill_diary_default_content_height"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_0"
        style="@style/morning_feeling_tv"
        android:drawableTop="@drawable/sel_morning_feeling_0"
        android:text="@string/morning_feelings_0" />

    <TextView
        android:id="@+id/tv_1"
        style="@style/morning_feeling_tv"
        android:drawableTop="@drawable/sel_morning_feeling_1"
        android:text="@string/morning_feelings_1" />

    <TextView
        android:id="@+id/tv_2"
        style="@style/morning_feeling_tv"
        android:drawableTop="@drawable/sel_morning_feeling_2"
        android:text="@string/morning_feelings_2" />

    <TextView
        android:id="@+id/tv_3"
        style="@style/morning_feeling_tv"
        android:drawableTop="@drawable/sel_morning_feeling_3"
        android:text="@string/morning_feelings_3" />

    <TextView
        android:id="@+id/tv_4"
        style="@style/morning_feeling_tv"
        android:drawableTop="@drawable/sel_morning_feeling_4"
        android:text="@string/morning_feelings_4" />
</LinearLayout>