<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_cbti_share_bg"
    android:orientation="vertical"
    tools:context=".buz.account.achievement.MyAchievementActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/space_210"
        android:layout_height="@dimen/space_150"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_42"
        android:background="@drawable/ic_cbti_share_avatar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_share_avatar"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_80"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_26"
            android:contentDescription="@null"
            android:src="@mipmap/ic_info_avatar_patient"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_share_medal_title"
            style="@style/text_t5_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_6"
            android:gravity="center"
            android:textColor="@color/b2_color_day"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_share_avatar"
            tools:ignore="ContentDescription"
            tools:text="睡眠老司机" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_share_get_date"
        style="@style/text_t5_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_6"
        android:textColor="@color/t6_color_day"
        tools:text="2019.01.16 获得" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        app:cardBackgroundColor="@color/b2_color_day"
        app:cardCornerRadius="@dimen/space_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_share_medal_content_title"
                style="@style/text_t3_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_40"
                android:textSize="@dimen/font_21"
                android:textStyle="bold"
                tools:text="“我的睡眠健康我主宰”" />

            <com.sumian.common.h5.widget.SWebView
                android:id="@+id/web_view_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_40"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginRight="@dimen/space_40"
                android:minHeight="@dimen/space_10" />

            <ImageView
                android:id="@+id/iv_share_qr_code"
                android:layout_width="@dimen/space_140"
                android:layout_height="@dimen/space_140"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_38"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/text_t2_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginBottom="@dimen/space_30"
                android:text="@string/share_bottom_tips" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>