<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginTop="68dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="68dp"
    android:background="@drawable/shape_rect_solid_white_radius_4dp"
    android:orientation="vertical"
    tools:context=".buz.diary.sleeprecord.SleepRestrictionIntroductionDialogActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/iv_sleep_restriction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />
        <!--android:src="@drawable/sleep_restriction"-->

    </ScrollView>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:padding="20dp"
        android:src="@drawable/ic_close"
        tools:ignore="ContentDescription" />
</RelativeLayout>