<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sleep_restriction_hint"
            style="@style/text_white_14"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/sleepdiary_img_restrictionbg"
            android:gravity="center_vertical"
            android:paddingStart="50dp"
            android:text="@string/sleep_restriction_hint"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:id="@+id/vg_title"
            style="@style/SimpleTitleItem">

            <TextView
                style="@style/text_t1_16"
                android:text="@string/sleep_record" />

            <Space style="@style/space_horizontal_weight_1" />

            <TextView
                android:id="@+id/tv_refill"
                style="@style/text_b3_16"
                android:padding="10dp"
                android:text="@string/refill" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sleep_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                tools:visibility="gone">

                <com.sumian.sd.buz.diary.sleeprecord.widget.SleepRecordProgressView
                    android:id="@+id/progress_view_sleep"
                    android:layout_width="@dimen/space_140"
                    android:layout_height="@dimen/space_140"
                    app:srpv_center_message="@string/sleep_efficient" />

                <Space
                    android:layout_width="@dimen/space_36"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SimpleSleepRecordGreyIconTv"
                        android:drawableStart="@mipmap/ic_record_icon_clock"
                        android:text="@string/record_sleep_duration" />

                    <TextView
                        android:id="@+id/tv_sleep_duration"
                        style="@style/text_t1_16"
                        android:textStyle="bold"
                        tools:text="6小时15分钟" />

                    <View
                        style="@style/HorizontalDividerLine"
                        android:layout_marginTop="@dimen/space_15"
                        android:layout_marginBottom="@dimen/space_15" />

                    <TextView
                        style="@style/SimpleSleepRecordGreyIconTv"
                        android:layout_marginBottom="5dp"
                        android:drawableStart="@mipmap/ic_record_icon_sleep"
                        android:text="@string/on_bed_duration" />

                    <TextView
                        android:id="@+id/tv_on_bed_duration"
                        style="@style/text_t1_16"
                        android:textStyle="bold"
                        tools:text="6小时15分钟" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="20dp">

                <com.sumian.sd.buz.diary.sleeprecord.widget.SleepRecordDiagramView
                    android:id="@+id/sleep_record_diagram_view"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@color/white" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout style="@style/SimpleTitleItem">

                    <TextView
                        style="@style/text_t1_16"
                        android:text="@string/wake_up_emotion" />

                    <Space style="@style/space_horizontal_weight_1" />

                    <ImageView
                        android:id="@+id/iv_emotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/record_icon_facial_1" />

                    <TextView
                        android:id="@+id/tv_sleep_quality"
                        style="@style/text_t1_16"
                        tools:text="正常" />
                </LinearLayout>

                <LinearLayout style="@style/SimpleTitleItem">

                    <TextView
                        style="@style/text_t1_16"
                        android:text="@string/night_wakeup" />

                    <Space style="@style/space_horizontal_weight_1" />

                    <TextView
                        android:id="@+id/tv_night_wake_up_duration"
                        style="@style/text_t1_16"
                        tools:text="2次，1小时15分钟" />
                </LinearLayout>

                <LinearLayout style="@style/SimpleTitleItem">

                    <TextView
                        style="@style/text_t1_16"
                        android:text="@string/little_sleep" />

                    <Space style="@style/space_horizontal_weight_1" />

                    <TextView
                        android:id="@+id/tv_little_sleep_duration"
                        style="@style/text_t1_16"
                        tools:text="没小睡" />
                </LinearLayout>

                <LinearLayout
                    style="@style/SimpleTitleItem"
                    android:background="@color/white">

                    <TextView
                        style="@style/text_t1_16"
                        android:text="@string/pills_history" />

                    <Space
                        style="@style/space_horizontal_weight_1"
                        android:minWidth="100dp" />

                    <FrameLayout
                        android:layout_width="240dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_pills"
                            style="@style/text_t1_16"
                            android:layout_width="wrap_content"
                            android:layout_gravity="end"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="咪达唑仑、咪达唑仑、咪达唑仑、咪达唑仑、咪达唑仑、" />
                    </FrameLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vg_sleep_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/text_t1_16"
                    android:text="@string/sleep_remark" />

                <TextView
                    android:id="@+id/tv_sleep_desc"
                    style="@style/text_t2_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:text="我今天失眠了，晚上的时候内心有点慌乱，会胡思乱想，睡前有服用咪达唑仑、氟西泮这两种药物，但是感觉对睡眠并没有什么帮助，醒来之后感觉很沮丧，不知道要怎么改善这种状态比较好。" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no_sleep_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/ring_b1_10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_no_record_date"
                        style="@style/text_b3_18"
                        android:textStyle="bold"
                        tools:text="4月5日" />

                    <TextView
                        style="@style/text_t2_14"
                        android:layout_marginTop="@dimen/space_4"
                        android:text="@string/no_record_yet" />
                </LinearLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="0dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SimpleSleepRecordGreyIconTv"
                        android:drawableStart="@mipmap/ic_record_icon_clock"
                        android:text="@string/record_sleep_duration" />

                    <TextView
                        style="@style/text_t1_16"
                        android:text="——"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <View
                        style="@style/HorizontalDividerLine"
                        android:layout_marginTop="@dimen/space_15"
                        android:layout_marginBottom="@dimen/space_15" />

                    <TextView
                        style="@style/SimpleSleepRecordGreyIconTv"
                        android:layout_marginBottom="5dp"
                        android:drawableStart="@mipmap/ic_record_icon_sleep"
                        android:text="@string/on_bed_duration" />

                    <TextView
                        style="@style/text_t1_16"
                        android:text="——"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/text_t2_14"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/no_sleep_record_hint" />

            <TextView
                android:id="@+id/btn_for_no_data"
                style="@style/SumianButton"
                android:layout_marginStart="@dimen/space_36"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginEnd="@dimen/space_36"
                android:text="@string/go_record" />

            <TextView
                android:id="@+id/tv_sleep_record_not_enable_hint"
                style="@style/text_t2_13"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_report_icon_caveat"
                android:drawablePadding="10dp"
                android:text="@string/only_last_3_days_can_fill_sleep_diary"
                android:visibility="gone" />

            <Space
                android:layout_width="0dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp">

            <TextView
                style="@style/text_t2_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_diary_reminder_hint" />

            <TextView
                android:id="@+id/tv_go_to_set_diary_reminder"
                style="@style/text_t2_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_diary_reminder_hint_2"
                android:textColor="@color/b3_color" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>