<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_solid_white_radius_4dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Space
        android:layout_width="0dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_t3_18"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textStyle="bold"
        tools:text="Title" />

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_message"
        style="@style/text_t1_14"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textSize="@dimen/font_14"
        tools:text="Message Message Message Message Message Message Message Message " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_left"
            style="@style/SumianButton"
            android:layout_height="@dimen/space_50"
            android:layout_marginStart="@dimen/space_20"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            tools:background="@drawable/bg_btn_white"
            tools:text="@string/confirm"
            tools:textColor="@color/t5_color" />

        <Space
            android:id="@+id/space"
            android:layout_width="@dimen/space_20"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_right"
            style="@style/SumianButton"
            android:layout_height="@dimen/space_50"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            tools:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>