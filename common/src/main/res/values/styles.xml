        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_t1_12" parent="text_t1_style">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="text_t1_14" parent="text_t1_style">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_t1_16" parent="text_t1_style">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t1_18" parent="text_t1_style">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="text_t2_style" parent="BaseText">
        <item name="android:textColor">@color/t2_color</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t2_14" parent="text_t2_style">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_t2_16" parent="text_t2_style">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t2_18" parent="text_t2_style">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="text_t3_style" parent="BaseText">
        <item name="android:textColor">@color/t3_color</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="text_t3_14" parent="text_t3_style">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_t3_16" parent="text_t3_style">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t3_18" parent="text_t3_style">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="text_white" parent="BaseText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_white_14" parent="text_white">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_white_16" parent="text_white">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_white_18" parent="text_white">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="text_b2_16" parent="BaseText">
        <item name="android:textColor">@color/b2_color</item>
    </style>

    <style name="text_b3" parent="BaseText">
        <item name="android:textColor">@color/b3_color</item>
    </style>

    <style name="text_b3_14" parent="text_b3">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_b3_16" parent="text_b3">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_b3_18" parent="text_b3">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="ll_mp_wc_bg_white_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ll_mp_wc_bg_white_vertical_padding_20" parent="ll_mp_wc_bg_white_vertical">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="space_height_5" parent="space">
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="space_height_10" parent="space">
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="space_height_20" parent="space">
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="space_horizontal_weight_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="mp_wc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mp_wc_horizontal_padding_20" parent="mp_wc">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="SimpleSleepRecordGreyIconTv">
        <item name="android:layout_marginBottom">@dimen/space_5</item>
        <item name="android:drawablePadding">@dimen/space_10</item>
    </style>

    <style name="SumianEditTextWhiteBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/t1_color</item>
        <item name="android:textColorHint">@color/t2_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="RegisterDot">
        <item name="android:layout_width">@dimen/space_10</item>
        <item name="android:layout_height">@dimen/space_10</item>
        <item name="android:src">@drawable/register_dot</item>
        <item name="android:layout_margin">@dimen/space_5</item>
    </style>

    <style name="RegisterLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rect_b1_b5</item>
        <item name="android:layout_height">@dimen/space_1</item>
        <item name="android:layout_marginStart">@dimen/space_5</item>
    </style>
</resources>