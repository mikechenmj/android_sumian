<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_shape_rect_solid_white_radius_4dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:visibility="gone"
            tools:src="@mipmap/btn_download"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_common_dialog_close"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

    </FrameLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_t3_18"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="Title Title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_message"
        style="@style/text_t1_14"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textSize="@dimen/font_14"
        android:visibility="gone"
        tools:text="MessageMessageMessageMessageMessageMessageMessageMessageMessage"
        tools:visibility="visible" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        tools:ignore="RtlSymmetry">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_left"
            style="@style/SumianButton"
            android:layout_width="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:text="@string/cancel"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_right"
            style="@style/SumianButton"
            android:layout_width="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:text="@string/cancel"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>