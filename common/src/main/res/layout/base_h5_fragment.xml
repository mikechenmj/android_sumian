<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/space_48"
            android:layout_height="match_parent"
            android:layout_gravity="center|start"
            android:background="@drawable/bg_material"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/space_20"
            android:paddingTop="@dimen/space_16"
            android:paddingRight="@dimen/space_20"
            android:paddingBottom="@dimen/space_16"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_nav_icon_back"
            android:tint="@color/black"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:paddingEnd="15dp"
            android:src="@drawable/nav_icon_share_black"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#E3E5E6" />
    </FrameLayout>

    <com.sumian.common.h5.widget.SWebViewLayout
        android:id="@+id/sm_webview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>



