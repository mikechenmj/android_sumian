<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_50"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_play_l3"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:layout_marginStart="@dimen/space_10"
            android:contentDescription="@null"
            android:paddingStart="@dimen/space_6"
            android:paddingTop="@dimen/space_6"
            android:paddingEnd="@dimen/space_2"
            android:paddingBottom="@dimen/space_6"
            app:srcCompat="@drawable/ic_voice_hear_play" />

        <SeekBar
            android:id="@+id/sb_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxHeight="@dimen/space_2"
            android:progress="0"
            android:progressDrawable="@drawable/seek_bar_voice"
            android:secondaryProgress="0"
            android:thumbTint="@color/b3_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_duration"
        style="@style/text_t2_16"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/space_10"
        android:gravity="center"
        android:hint="00:00"
        android:text="00:00"
        tools:ignore="HardcodedText" />

</LinearLayout>