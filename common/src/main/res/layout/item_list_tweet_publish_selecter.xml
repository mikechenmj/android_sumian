<?xml version="1.0" encoding="utf-8"?>
<com.sumian.common.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_4"
    app:accordTo="width">

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dadada"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:padding="0dp"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iv_is_gif"
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_gravity="right|bottom"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@mipmap/gif"
        android:visibility="gone"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/space_24"
        android:layout_height="@dimen/space_24"
        android:layout_gravity="right|top"
        android:contentDescription="@string/app_name"
        android:paddingBottom="@dimen/space_4"
        android:paddingLeft="@dimen/space_4"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_advisory_icon_delete"
        tools:ignore="RtlHardcoded" />
</com.sumian.common.widget.SquareLayout>