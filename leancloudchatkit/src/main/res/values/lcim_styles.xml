<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="LCIMKitTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lcim_common_blue</item>
        <item name="colorPrimaryDark">@color/lcim_common_blue</item>
        <item name="colorAccent">@color/lcim_common_blue</item>
        <item name="actionBarTheme">@style/LCIMActionBarTheme</item>
    </style>

    <!-- activity -->
    <style name="LCIMActivity" parent="LCIMKitTheme" />

    <style name="LCIMActivity.NoActionBar">
        <item name="colorPrimary">@color/lcim_common_blue</item>
        <item name="colorPrimaryDark">@color/lcim_common_blue</item>
        <item name="colorAccent">@color/lcim_common_blue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:editTextStyle">@style/LCIMEditText</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LCIMActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <!--<style name="LCIMActivity.FullScreen" >-->
    <!--<item name="android:windowFullscreen">true</item>-->
    <!--</style>-->


    <!-- divider -->
    <style name="LCIMDividerLine">
        <item name="android:background">@color/lcim_divider_line_color</item>
    </style>

    <style name="LCIMDividerLine.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lcim_divider_line_height</item>
    </style>

    <style name="LCIMDividerLine.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/lcim_divider_line_height</item>
    </style>


    <!-- editText -->
    <style name="LCIMEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <!-- text appearance -->
    <style name="LCIMTextAppearance" />

    <style name="LCIMTextAppearance.Large">
        <item name="android:textSize">@dimen/lcim_textsize_large</item>
    </style>

    <style name="LCIMTextAppearance.Large.Gray">
        <item name="android:textColor">@color/lcim_common_gray</item>
    </style>

    <style name="LCIMTextAppearance.Normal">
        <item name="android:textSize">@dimen/lcim_textsize_normal</item>
    </style>

    <style name="LCIMTextAppearance.Normal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LCIMTextAppearance.Normal.Gray">
        <item name="android:textColor">@color/lcim_common_gray</item>
    </style>

    <style name="LCIMTextAppearance.Small" />

    <!-- Avatar -->
    <style name="LCIMAvatar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">centerCrop</item>
        <!--<item name="android:src">@drawable/chat_default_user_avatar</item>-->
    </style>

    <style name="LCIMAvatar.Large">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="LCIMAvatar.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>


    <!-- 以下都是单独的 style -->
    <style name="lcim_record_dialog_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/lcim_chat_record_button_round_background
        </item>
    </style>

    <style name="lcim_input_bar_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">@dimen/lcim_bottom_bar_button_margin</item>
        <item name="android:paddingLeft">@dimen/lcim_bottom_bar_button_margin</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="lcim_input_bar_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:maxLines">4</item>
        <item name="android:background">@drawable/lcim_textview_bg</item>
        <item name="android:textSize">@dimen/lcim_textsize_normal</item>
    </style>

    <style name="lcim_input_bar_record_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:text">@string/lcim_chat_bottom_record_layout_pressToRecord</item>
    </style>

    <style name="im_message_text_left">
        <item name="android:textColor">@color/t1_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rect_im_bubble_left_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">215dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="im_message_text_right" parent="im_message_text_left">
        <item name="android:background">@drawable/shape_rect_im_bubble_right_blue</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="im_message_voice" parent="im_message_text_left">
        <item name="android:background">@drawable/shape_rect_im_bubble_left_white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:maxWidth">215dp</item>
        <item name="android:minWidth">85dp</item>
    </style>

    <style name="lcim_progressbar_style">
        <item name="android:indeterminateDrawable">@drawable/lcim_loading_anim</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!--text-->
    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

