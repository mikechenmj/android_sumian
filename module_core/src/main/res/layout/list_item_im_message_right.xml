<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="10dp"
    android:gravity="end"
    android:orientation="horizontal"
    tools:background="#eee">

    <LinearLayout
        android:id="@+id/v_video_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_voice_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/core_anim_im_voice_loading" />

        <TextView
            android:id="@+id/tv_voice"
            style="@style/core_im_message_voice"
            android:background="@drawable/shape_rect_im_bubble_right_blue"
            android:drawableEnd="@drawable/core_icon_im_voice"
            android:gravity="end"
            android:textColor="@color/white"
            tools:text="60''"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        style="@style/core_im_message_text"
        android:background="@drawable/shape_rect_im_bubble_right_blue"
        android:textColor="@color/white"
        tools:text="执行了睡眠限制以后感觉入睡情况好多了，但是会觉得累。"
        tools:visibility="gone" />

    <Space
        android:layout_width="10dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        tools:src="#300" />

</LinearLayout>