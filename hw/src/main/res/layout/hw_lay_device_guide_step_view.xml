<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_content_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:layout_marginTop="@dimen/space_64"
        android:text="@string/sumian_welcome"
        android:textColor="@color/bt_hole_color"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/tv_label_h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:layout_marginTop="@dimen/space_8"
        android:text="@string/please_turn_on_bluetooth_adapter"
        android:textColor="@color/full_general_color"
        android:textSize="@dimen/font_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginStart="@dimen/space_30"
        android:layout_marginTop="@dimen/space_16"
        android:background="@color/light_content_bg_color" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/space_200"
        android:layout_height="@dimen/space_200"
        android:layout_gravity="center"
        android:layout_marginTop="109dp"
        android:contentDescription="@null"
        app:srcCompat="@mipmap/equip_icon_bluetooth" />

    <TextView
        android:id="@+id/tv_label_go_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_20"
        android:gravity="center"
        android:text="@string/bluetooth_adapter_is_turn_off"
        android:textColor="@color/full_general_color"
        android:textSize="@dimen/font_14" />

</LinearLayout>