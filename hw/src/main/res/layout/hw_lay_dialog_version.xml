<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_version_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_32"
        android:gravity="center"
        android:text="@string/firmware_download_title_hint"
        android:textColor="@color/bt_hole_color"
        android:textSize="@dimen/font_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:background="@color/general_color" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_24"
        android:layout_marginTop="@dimen/space_24"
        android:gravity="center"
        android:text="0%"
        android:textSize="@dimen/font_18"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_6"
        android:layout_marginBottom="@dimen/space_56"
        android:layout_marginEnd="@dimen/space_32"
        android:layout_marginStart="@dimen/space_32"
        android:progress="100"
        android:progressDrawable="@drawable/progress_horizontal"
        android:secondaryProgress="0" />

</LinearLayout>