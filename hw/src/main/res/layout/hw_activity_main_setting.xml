<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hw_colorPrimaryDark"
    android:orientation="vertical">

    <com.sumian.app.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/setting_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hw_colorPrimaryDark"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_16"
            android:paddingEnd="@dimen/space_16"
            android:paddingStart="@dimen/space_24"
            android:paddingTop="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="@string/sleep_note_hint"
                android:textColor="@color/full_general_color"
                tools:ignore="RtlHardcoded" />

            <com.sumian.app.widget.ToggleButton
                android:id="@+id/tb_reminder"
                android:layout_width="@dimen/space_56"
                android:layout_height="@dimen/space_28"
                android:layout_gravity="center|right"
                app:offBorderColor="@color/colorPrimary"
                app:offColor="@color/colorPrimary"
                app:onColor="@color/bt_hole_color"
                app:spotColor="@color/colorPrimaryDark"
                app:toggle_border_width="@dimen/space_1"
                tools:ignore="RtlHardcoded" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_px_1"
            android:layout_marginStart="@dimen/space_24"
            android:background="@color/light_content_bg_color" />

        <TextView
            android:id="@+id/tv_reminder_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_16"
            android:layout_marginLeft="@dimen/space_24"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:text="@string/sleep_notification_remark"
            android:textColor="@color/alpha_general_color"
            android:textSize="@dimen/font_12"
            android:visibility="visible"
            tools:ignore="RtlHardcoded"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:background="@color/light_content_bg_color"
        android:visibility="visible"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginTop="@dimen/space_20"
        android:background="@color/light_content_bg_color"
        android:visibility="visible"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/lay_bind_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_material_ripple"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_16"
        android:paddingStart="@dimen/space_24"
        android:paddingTop="@dimen/space_16"
        android:visibility="visible"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/bind_wechat"
            android:textColor="@color/full_general_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_wechat_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/space_8"
            android:ellipsize="marquee"
            android:maxEms="12"
            android:singleLine="true"
            android:textColor="@color/full_general_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded"
            tools:text="hello" />

        <com.sumian.app.widget.ToggleButton
            android:id="@+id/bt_bind_wechat"
            android:layout_width="@dimen/space_56"
            android:layout_height="@dimen/space_28"
            android:layout_gravity="center|right"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginStart="@dimen/space_12"
            app:offBorderColor="@color/colorPrimary"
            app:offColor="@color/colorPrimary"
            app:onColor="@color/bt_hole_color"
            app:spotColor="@color/colorPrimaryDark"
            app:toggle_border_width="@dimen/space_1"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:background="@color/light_content_bg_color"
        android:visibility="visible"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginTop="@dimen/space_20"
        android:background="@color/light_content_bg_color"
        android:visibility="visible"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/lay_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_material_ripple"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_16"
        android:paddingStart="@dimen/space_24"
        android:paddingTop="@dimen/space_16"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/setting_modify_pwd_hint"
            android:textColor="@color/general_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:layout_gravity="right|center"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_show_redirect"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginStart="@dimen/space_24"
        android:background="@color/light_content_bg_color"
        android:visibility="visible"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/lay_unbind_sleepy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_material_ripple"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_16"
        android:paddingStart="@dimen/space_24"
        android:paddingTop="@dimen/space_16"
        android:visibility="visible"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/unbind_sleepy_hint"
            android:textColor="@color/general_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:layout_gravity="right|center"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_show_redirect"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginStart="@dimen/space_24"
        android:background="@color/light_content_bg_color"
        android:visibility="visible"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/lay_about_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_material_ripple"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_16"
        android:paddingStart="@dimen/space_24"
        android:paddingTop="@dimen/space_16"
        android:visibility="visible"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/setting_about_me_hint"
            android:textColor="@color/general_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:layout_gravity="right|center"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_show_redirect"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginStart="@dimen/space_24"
        android:background="@color/light_content_bg_color"
        android:visibility="visible"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/lay_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_material_ripple"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_16"
        android:paddingStart="@dimen/space_24"
        android:paddingTop="@dimen/space_16"
        android:visibility="visible"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/feedback"
            android:textColor="@color/general_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:layout_gravity="right|center"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_show_redirect"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:background="@color/light_content_bg_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginTop="@dimen/space_20"
        android:background="@color/light_content_bg_color"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_material_ripple"
        android:gravity="center"
        android:paddingBottom="@dimen/space_20"
        android:paddingTop="@dimen/space_20"
        android:text="@string/setting_logout_hint"
        android:textColor="@color/warn_color"
        android:textSize="@dimen/font_16"
        tools:ignore="RtlHardcoded" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:background="@color/light_content_bg_color" />

</LinearLayout>