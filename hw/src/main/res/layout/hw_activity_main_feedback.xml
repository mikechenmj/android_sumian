<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".improve.feedback.FeedbackActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:layout_gravity="center|left"
            android:background="@drawable/bg_material_ripple"
            android:contentDescription="@null"
            android:padding="@dimen/space_16"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_back"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_material_ripple"
            android:gravity="center"
            android:padding="@dimen/space_12"
            android:text="@string/feedback"
            android:textColor="@color/bt_hole_color"
            android:textSize="@dimen/font_20" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:background="@drawable/bg_material_ripple"
            android:gravity="center"
            android:padding="@dimen/space_12"
            android:text="提交"
            android:textColor="@color/bt_hole_color"
            android:textSize="@dimen/font_20"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_30"
        android:layout_marginTop="@dimen/space_16"
        android:text="@string/question_and_advice"
        android:textColor="#ff7ea5f4"
        android:textSize="@dimen/font_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginTop="@dimen/space_16"
        android:background="@color/light_content_bg_color" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_200"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:layout_marginTop="@dimen/space_16"
        android:background="@null"
        android:gravity="top"
        android:hint="问题或建议"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="@dimen/space_2"
        android:textColor="#ff7ea5f4"
        android:textColorHint="@color/full_general_color"
        android:textSize="@dimen/font_16"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/tv_content_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/space_30"
        android:text="200"
        android:textColor="@color/full_general_color"
        android:textSize="@dimen/font_14"
        android:visibility="gone"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginStart="@dimen/space_30"
        android:layout_marginTop="@dimen/space_15"
        android:background="@color/light_content_bg_color" />

</LinearLayout>