<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <com.sumian.app.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/setting_reset_pwd" />

    <FrameLayout
        android:id="@+id/lay_pwd_pop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:background="@color/warn_bg_color"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_error_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/space_8"
            android:drawableStart="@mipmap/ic_pop"
            android:gravity="center"
            android:text="@string/verify_pwd_error_hint"
            android:textColor="@color/warn_color"
            android:textSize="@dimen/font_16" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_32"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/space_28"
        android:paddingStart="@dimen/space_28">

        <ImageView
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:contentDescription="@null"
            android:padding="@dimen/space_12"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_login_pwd" />

        <View
            android:layout_width="@dimen/divider_px_1"
            android:layout_height="@dimen/space_28"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/login_line_color" />

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_56"
            android:layout_marginStart="@dimen/space_8"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="@string/setting_new_pwd_hint"
            android:inputType="textPassword"
            android:textColor="@color/general_color"
            android:textColorHint="@color/general_color"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginEnd="@dimen/space_18"
        android:layout_marginStart="@dimen/space_18"
        android:background="@color/login_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/space_28"
        android:paddingStart="@dimen/space_28">

        <ImageView
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:contentDescription="@null"
            android:padding="@dimen/space_12"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_new_pwd" />

        <View
            android:layout_width="@dimen/divider_px_1"
            android:layout_height="@dimen/space_28"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/login_line_color" />

        <EditText
            android:id="@+id/et_new_pwd_verify"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_56"
            android:layout_marginStart="@dimen/space_8"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="@string/setting_re_set_new_pwd_hint"
            android:inputType="textPassword"
            android:textColor="@color/general_color"
            android:textColorHint="@color/general_color"
            android:textCursorDrawable="@drawable/bg_cursor"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginEnd="@dimen/space_18"
        android:layout_marginStart="@dimen/space_18"
        android:background="@color/login_line_color" />

    <Button
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_56"
        android:layout_marginEnd="@dimen/space_28"
        android:layout_marginStart="@dimen/space_28"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/bt_circle_bg"
        android:gravity="center"
        android:text="@string/setting_save_hint"
        android:textColor="@color/white"
        android:textSize="@dimen/font_20" />

</LinearLayout>