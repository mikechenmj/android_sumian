<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:background="@drawable/shape_timeline"
        android:gravity="center"
        android:lineSpacingExtra="0dp"
        android:padding="@dimen/space_6"
        android:textSize="@dimen/font_12"
        android:visibility="gone"
        tools:ignore="RtlHardcoded"
        tools:text="8月31日 15:40"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_12"
        android:paddingLeft="@dimen/space_8"
        android:paddingRight="@dimen/space_8">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:layout_gravity="center|left|top"
            android:contentDescription="@null"
            android:padding="@dimen/space_4"
            android:src="@mipmap/ic_chat_left_default"
            tools:ignore="RtlHardcoded" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.sumian.app.widget.BubbleImageView
                android:id="@+id/biv_image"
                android:layout_width="@dimen/space_100"
                android:layout_height="@dimen/space_160"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_marginRight="@dimen/space_4"
                android:layout_marginTop="@dimen/space_8"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_advisory_chatbubble_mask_l"
                app:chat_image_mask="@drawable/ic_advisory_chatbubble_l" />

            <TextView
                android:id="@+id/tv_loading_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/percent_zero"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_8">

            <ImageView
                android:id="@+id/iv_msg_failed"
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:visibility="invisible"
                app:srcCompat="@mipmap/ic_advisory_caveat_l"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/loading"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_marginRight="@dimen/space_4"
                android:indeterminateDrawable="@drawable/progress_loading"
                android:visibility="invisible"
                tools:ignore="RtlHardcoded"
                tools:visibility="visible" />

        </FrameLayout>

    </LinearLayout>


</LinearLayout>