<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--title bar-->
    <declare-styleable name="TitleBar">

        <attr name="text" format="reference|string" />
        <attr name="more_icon" format="reference" />
        <attr name="show_spanner" format="boolean" />

    </declare-styleable>

    <!--toggle button-->
    <declare-styleable name="ToggleButton">
        <attr name="toggle_border_width" format="dimension" />
        <attr name="offBorderColor" format="reference|color" />
        <attr name="offColor" format="reference|color" />
        <attr name="onColor" format="reference|color" />
        <attr name="spotColor" format="reference|color" />
    </declare-styleable>

    <!--battery-->
    <declare-styleable name="BatteryView">

        <attr name="ah" format="reference|integer" />
        <attr name="full_ah" format="reference|integer" />
        <attr name="border_color" format="reference|color" />
        <attr name="border_width" format="reference|dimension" />
        <attr name="text_size" format="reference|dimension" />
        <attr name="text_color" format="reference|color" />
        <attr name="top_full_half_color" format="reference|color" />
        <attr name="bottom_full_half_color" format="reference|color" />
        <attr name="top_less_half_color" format="reference|color" />
        <attr name="bottom_less_half_color" format="reference|color" />
        <attr name="border_radius" format="reference|dimension" />
        <attr name="ah_radius" format="reference|dimension" />

    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="lineColor" format="color|reference" />
        <attr name="selectedTextColor" format="color|reference" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>


    <declare-styleable name="FlowLayout">
        <attr name="horizontalSpace" format="dimension" />
        <attr name="verticalSpace" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SleepHistogramView">
        <attr name="label_text_size" format="dimension|reference" />
        <attr name="label_text_color" format="color|reference" />
        <attr name="x_max_progress" format="integer|reference" />
        <attr name="y_max_progress" format="integer|reference" />
        <attr name="histogram_type" format="enum|reference">
            <enum name="WEEK" value="0" />
            <enum name="MONTH" value="1" />
            <enum name="YEAR" value="2" />
        </attr>
        <attr name="empty_text" format="string|reference" />
        <attr name="empty_text_size" format="dimension|reference" />
        <attr name="deep_color" format="color|reference" />
        <attr name="light_color" format="color|reference" />
        <attr name="eog_color" format="color|reference" />
        <attr name="sober_color" format="color|reference" />
        <attr name="coordinate_color" format="color|reference" />
        <attr name="coordinate_size" format="dimension|reference" />
    </declare-styleable>


    <declare-styleable name="BubbleImageView">
        <attr name="chat_image_mask" format="reference" />
    </declare-styleable>

    <declare-styleable name="VersionInfoView">
        <attr name="upgrade_label" format="string|reference" />
    </declare-styleable>


    <declare-styleable name="DeviceStateItemView">
        <attr name="device_name" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="DeviceChaView">
        <attr name="name" format="string|reference" />
        <attr name="status" format="integer|reference" />
    </declare-styleable>

    <!--睡眠数据均值对比统计 view-->
    <declare-styleable name="SleepAvgAndCompareView">
        <attr name="label_text" format="string|reference" />
        <attr name="label_icon" format="reference" />
        <attr name="compare_label_text" format="string|reference" />
        <attr name="is_gone_divider" format="boolean|reference" />
    </declare-styleable>

    <declare-styleable name="RippleAnimationView">
        <attr name="ripple_anim_scale" format="float|reference" />
        <attr name="ripple_anim_color" format="color|reference" />
        <attr name="ripple_anim_amount" format="integer|reference" />
        <attr name="ripple_anim_duration" format="integer|reference" />
        <attr name="ripple_anim_radius" format="dimension|reference" />
        <attr name="ripple_anim_strokeWidth" format="dimension|reference" />
        <attr name="ripple_anim_type" format="enum">
            <enum name="fillRipple" value="0" />
            <enum name="strokeRipple" value="1" />
        </attr>
    </declare-styleable>


</resources>