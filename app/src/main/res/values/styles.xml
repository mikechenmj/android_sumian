    </style>

    <style name="SumianLoadingDialog.NotDim">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog_change_clarity" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/dialog_bg_color</item>
    </style>


    <!-- Base application theme. -->
    <style name="HwAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hw_colorPrimary</item>
        <item name="colorPrimaryDark">@color/hw_colorPrimary</item>
        <item name="colorAccent">@color/hw_colorPrimary</item>
        <item name="android:textColor">@color/general_color</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:selectableItemBackground">@drawable/bg_material_ripple</item>
        <item name="android:state_pressed">@drawable/bg_material_ripple</item>
        <item name="android:animateOnClick">@drawable/bg_material_ripple</item>
        <item name="android:windowOverscan">true</item>
        <item name="android:outlineProvider">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:launchMode">singleTop</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
        <item name="android:windowSoftInputMode">stateHidden|stateUnchanged</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <item name="android:windowBackground">@color/hw_colorPrimary</item>
        <!--<item name="android:windowAnimationStyle">@style/default_animation</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="TranslucentWindow" parent="HwAppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- 以下都是单独的 style -->
    <style name="lcim_record_dialog_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/lcim_chat_record_button_round_background
        </item>
    </style>

    <style name="full_screen_dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="week_count_text_style">
        <item name="android:textColor">@color/full_general_color</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="SumianDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMinor">30%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DeviceOperationPopupText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bt_hole_color</item>
        <item name="android:paddingStart">@dimen/space_16</item>
        <item name="android:paddingEnd">@dimen/space_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
