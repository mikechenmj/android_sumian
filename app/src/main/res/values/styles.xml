<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowOverscan">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">false</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:launchMode">singleInstance</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
        <item name="android:windowSoftInputMode">stateHidden|stateUnchanged</item>
    </style>

    <style name="text_t3_style">
        <item name="android:textColor">@color/t3_color</item>
        <item name="android:textSize">@dimen/font_40</item>
    </style>

    <style name="text_t2_style">
        <item name="android:textColor">@color/t2_color</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="bt_t1_style">
        <item name="android:padding">@dimen/space_16</item>
        <item name="android:background">@drawable/bg_bt</item>
        <item name="android:textColor">@color/b2_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="bt_t2_style">
        <item name="android:paddingLeft">@dimen/space_12</item>
        <item name="android:paddingRight">@dimen/space_12</item>
        <item name="android:paddingTop">@dimen/space_8</item>
        <item name="android:paddingBottom">@dimen/space_8</item>
        <item name="android:background">@drawable/bg_bt</item>
        <item name="android:textColor">@color/b2_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t1_style">
        <item name="android:textColor">@color/t1_color</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="edit_text_t2_style">
        <item name="android:maxEms">20</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/t2_color</item>
        <item name="android:textColorHint">@color/t2_color</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="scan_qr_theme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowOverscan">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent
        </item>

        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:launchMode">singleInstance</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">stateHidden|stateUnchanged</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>


</resources>
