<resources xmlns:tools="http://schemas.android.com/tools">

    <!--text-->
    <style name="text_t1_style">
        <item name="android:textColor">@color/t1_color</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_t2_style">
        <item name="android:textColor">@color/t2_color</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t3_style">
        <item name="android:textColor">@color/t3_color</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <!--button-->
    <style name="bt_t1_style">
        <item name="android:padding">@dimen/space_16</item>
        <item name="android:background">@drawable/bg_bt</item>
        <item name="android:textColor">@color/b2_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="bt_t2_style">
        <item name="android:paddingLeft">@dimen/space_8</item>
        <item name="android:paddingRight">@dimen/space_8</item>
        <item name="android:background">@drawable/bg_bt</item>
        <item name="android:textColor">@color/b2_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="bt_t2_group_style">
        <item name="android:paddingLeft">@dimen/space_12</item>
        <item name="android:paddingRight">@dimen/space_12</item>
        <item name="android:paddingTop">@dimen/space_8</item>
        <item name="android:paddingBottom">@dimen/space_8</item>
        <item name="android:background">@drawable/bg_bt_group</item>
        <item name="android:textColor">@color/t2_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="SumianButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space_8</item>
        <item name="android:paddingRight">@dimen/space_8</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textColor">@color/b2_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <!--EditText-->
    <style name="edit_text_t2_style">
        <item name="android:maxEms">20</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/t2_color</item>
        <item name="android:textColorHint">@color/t2_color</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="scan_qr_theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowOverscan">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black_alpha_48
        </item>
        <item name="android:navigationMode">listMode</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:launchMode">singleInstance</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">stateHidden|stateUnchanged</item>
    </style>

    <style name="SumianDialog">
        <item name="android:windowMinWidthMinor">90%</item> <!-- 宽度屏占比 -->
        <!-- 默认背景是白色的圆角矩形，改为透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item> <!-- 默认平铺在界面顶部，为true之后会悬浮在中间，有阴影 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="TopNotificationText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_40</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="TopNotificationText.Blue">
        <item name="android:background">@color/b5_color</item>
    </style>

    <style name="TopNotificationText.Red">
        <item name="android:background">#F0918E</item>
    </style>

    <style name="HorizontalWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CalendarDateText" parent="HorizontalWeight">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/t2_color</item>
    </style>
</resources>
