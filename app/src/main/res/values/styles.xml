<resources>

    <!--text-->
    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseText" parent="WrapContent" />

    <style name="text_t1_style" parent="BaseText">
        <item name="android:textColor">@color/t1_color</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_t1_12" parent="text_t1_style">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="text_t1_14" parent="text_t1_style">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_t1_16" parent="text_t1_style">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t1_18" parent="text_t1_style">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="text_t2_style" parent="BaseText">
        <item name="android:textColor">@color/t2_color</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t2_14" parent="text_t2_style">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_t2_16" parent="text_t2_style">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t2_18" parent="text_t2_style">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="text_t3_style" parent="BaseText">
        <item name="android:textColor">@color/t3_color</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="text_t3_14" parent="text_t3_style">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_t3_16" parent="text_t3_style">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_t3_18" parent="text_t3_style">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="text_white" parent="BaseText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_white_14" parent="text_white">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_white_16" parent="text_white">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text_white_18" parent="text_white">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <!--button-->
    <style name="bt_t1_style">
        <item name="android:padding">@dimen/space_16</item>
        <item name="android:background">@drawable/bg_bt</item>
        <item name="android:textColor">@color/b2_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="SumianButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space_8</item>
        <item name="android:paddingRight">@dimen/space_8</item>
        <item name="android:background">@drawable/bg_bt</item>
        <item name="android:textColor">@color/sel_btn_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <!--EditText-->
    <style name="edit_text_t2_style">
        <item name="android:maxEms">20</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/t2_color</item>
        <item name="android:textColorHint">@color/t2_color</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="TopNotificationText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_40</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="TopNotificationText.Blue">
        <item name="android:background">@color/b5_color</item>
    </style>

    <style name="TopNotificationText.Red">
        <item name="android:background">#FFF0918E</item>
    </style>

    <style name="TopNotificationText.Yellow">
        <item name="android:background">@color/b4_color</item>
    </style>

    <style name="BottomNotificationText" parent="@style/TopNotificationText">
        <item name="android:background">@color/l3_color</item>
    </style>

    <style name="HorizontalWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CalendarDateText" parent="HorizontalWeight">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/t2_color</item>
    </style>

    <style name="SleepRecordMedicineTv" parent="text_t1_12">
        <item name="android:layout_marginTop">@dimen/space_8</item>
        <item name="android:layout_marginBottom">@dimen/space_8</item>
        <item name="android:drawableLeft">@drawable/rect_b5_10dp</item>
        <item name="android:drawablePadding">@dimen/space_6</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SleepRecordGreyIconTv" parent="text_t2_14">
        <item name="android:layout_marginBottom">@dimen/space_10</item>
        <item name="android:drawablePadding">@dimen/space_10</item>
    </style>

    <style name="SleepRecordTimeTv" parent="text_t1_16">
        <item name="android:layout_marginBottom">@dimen/space_20</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/l1_color</item>
    </style>

    <style name="HorizontalDividerLine" parent="DividerLine">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="HorizontalDividerLineMarginStart20" parent="HorizontalDividerLine">
        <item name="android:layout_marginStart">@dimen/space_20</item>
    </style>

    <style name="VerticalDividerLine" parent="DividerLine">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- notification -->
    <style name="NotificationIcon">
        <item name="android:layout_width">@dimen/tool_bar_height</item>
        <item name="android:layout_height">@dimen/tool_bar_height</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/sel_notification</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="SumianSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/b3_color</item>
    </style>

    <style name="ButtonSheetItem" parent="text_t1_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_20</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SumianDialog">
        <item name="android:windowMinWidthMinor">90%</item> <!-- 宽度屏占比 -->
        <!-- 默认背景是白色的圆角矩形，改为透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item> <!-- 默认平铺在界面顶部，为true之后会悬浮在中间，有阴影 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="SumianLoadingDialog">
        <!-- 默认背景是白色的圆角矩形，改为透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item> <!-- 默认平铺在界面顶部，为true之后会悬浮在中间，有阴影 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="SumianLoadingDialog.NotDim">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
