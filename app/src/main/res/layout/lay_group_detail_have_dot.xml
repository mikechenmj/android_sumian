<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/iv_group_icon"
        android:layout_width="@dimen/space_88"
        android:layout_height="@dimen/space_88"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@mipmap/ic_group_avatar"
        app:qmui_border_color="@color/b1_color"
        app:qmui_border_width="@dimen/space_4"
        app:qmui_corner_radius="@dimen/space_4" />

    <View
        android:id="@+id/msg_dot"
        android:layout_width="@dimen/space_12"
        android:layout_height="@dimen/space_12"
        android:layout_gravity="top|right"
        android:background="@drawable/bg_msg_dot"
        android:visibility="gone"
        tools:ignore="RtlHardcoded"
        tools:visibility="visible" />

</FrameLayout>