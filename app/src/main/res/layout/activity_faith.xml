<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sumian.common.widget.RegisterProgressView
        android:id="@+id/progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_progress_title"
            style="@style/tv_title_with_transparent_bg_and_bottom_line"
            android:text="@string/belief_title_0" />

        <EditText
            android:id="@+id/et_belief"
            style="@style/SumianEditTextWhiteBg"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:hint="@string/input_event_hint"
            android:maxLength="200"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            tools:ignore="Autofill,TextFields" />

        <TextView
            android:id="@+id/tv_belief_text_count"
            style="@style/text_t2_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical|end"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="0/200"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/vg_emotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/text_t2_16"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/when_you_thought_what_is_the_emotion" />

            <Space
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <com.sumian.sd.anxiousandfaith.widget.EmotionPickView
                android:id="@+id/emotion_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="0dp"
                android:layout_height="30dp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_next_step"
        style="@style/SumianButton_HorizontalMargin"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:text="@string/next_step" />
</LinearLayout>