<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    android:orientation="vertical"
    tools:context=".account.medal.MyMedalActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_470"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_70"
        android:layout_marginRight="@dimen/space_20"
        app:cardBackgroundColor="@color/b2_color_day"
        app:cardCornerRadius="@dimen/space_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_cbti_banner" />

            <TextView
                style="@style/text_t5_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_30"
                android:text="我的睡眠健康我主宰"
                android:textSize="@dimen/font_18"
                android:textStyle="bold" />

            <TextView
                style="@style/text_t2_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginRight="@dimen/space_30"
                android:layout_marginBottom="@dimen/space_30"
                android:textSize="@dimen/font_18"
                tools:text="dadasdsadasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdadasdasdasdasdasdasdasdasda" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/text_t2_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginBottom="@dimen/space_30"
        android:text="- 随手传递健康睡眠 -" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_share_wx"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:layout_marginEnd="@dimen/space_20"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_wechat" />

        <ImageView
            android:id="@+id/iv_share_wx_circle"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:layout_marginStart="@dimen/space_20"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_wechat_circle" />
    </LinearLayout>

</LinearLayout>