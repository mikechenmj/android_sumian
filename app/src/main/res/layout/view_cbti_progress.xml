<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/space_20">

    <TextView
        style="@style/text_t3_16"
        android:text="@string/cbti_ing"
        android:textStyle="bold" />

    <TextView
        style="@style/text_t2_14"
        android:layout_marginTop="@dimen/space_10"
        android:text="@string/cbti_ing_describe" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_30">

        <TextView
            style="@style/text_t1_14"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/current_progress_colon" />

        <TextView
            style="@style/text_t1_14"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/space_10"
            tools:text="第3章，7天后开启下一章" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.sumian.sleepdoctor.homepage.widget.WithLineProgressView
            android:id="@+id/progress_view_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:wlpv_show_line="false" />

        <com.sumian.sleepdoctor.homepage.widget.WithLineProgressView
            android:id="@+id/progress_view_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.sumian.sleepdoctor.homepage.widget.WithLineProgressView
            android:id="@+id/progress_view_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.sumian.sleepdoctor.homepage.widget.WithLineProgressView
            android:id="@+id/progress_view_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.sumian.sleepdoctor.homepage.widget.WithLineProgressView
            android:id="@+id/progress_view_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.sumian.sleepdoctor.homepage.widget.WithLineProgressView
            android:id="@+id/progress_view_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        style="@style/SumianButton"
        android:layout_marginBottom="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_15"
        android:layout_marginStart="@dimen/space_15"
        android:layout_marginTop="@dimen/space_30"
        android:text="@string/enter_and_learn" />

</LinearLayout>