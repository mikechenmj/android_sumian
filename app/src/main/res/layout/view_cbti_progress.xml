<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        tools:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/ll_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@drawable/bg_home_cbti_banner_low"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    style="@style/text_white_18"
                    android:text="@string/cbti_ing"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_cbti_subtitle"
                    style="@style/text_white_14"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="@string/cbti_ing_describe" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    style="@style/text_t1_14"
                    android:text="@string/current_progress_colon" />

                <TextView
                    android:id="@+id/tv_progress"
                    style="@style/text_t1_14"
                    android:layout_gravity="end"
                    tools:text="第3章，7天后开启下一章" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_progress_view_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_not_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_cbti_banner_high"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:scaleType="fitXY"
            android:visibility="visible">

            <TextView
                style="@style/text_white_18"
                android:text="@string/cbti_treatment"
                android:textStyle="bold" />

            <TextView
                style="@style/text_white_14"
                android:layout_marginTop="@dimen/space_10"
                android:text="@string/cbti_treatment_hint" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/shape_rect_solid_white_radius_4dp"
                android:gravity="center"
                android:text="@string/join_learn"
                android:textColor="@color/b3_color"
                android:textSize="13sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>