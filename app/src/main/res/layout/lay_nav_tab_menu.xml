<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/l1_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <com.sumian.sleepdoctor.widget.nav.ItemTab
            android:id="@+id/tb_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:tab_icon="@drawable/tab_group_icon"
            app:tab_text="@string/tab_group" />

        <View
            android:layout_width="@dimen/space_1"
            android:layout_height="@dimen/space_24"
            android:background="@color/l1_color" />

        <com.sumian.sleepdoctor.widget.nav.ItemTab
            android:id="@+id/tb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:tab_icon="@drawable/tab_me_icon"
            app:tab_text="@string/tab_me" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:background="@color/l1_color" />

</merge>