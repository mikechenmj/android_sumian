<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/b2_color_day"
    app:cardCornerRadius="@dimen/space_4"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_t3_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_20"
            android:layout_marginTop="@dimen/space_40"
            android:layout_marginEnd="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20"
            android:textStyle="bold"
            tools:text="上周睡眠限制执行起来感觉怎样？" />

        <com.sumian.common.widget.FlowLayout
            android:id="@+id/flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:orientation="horizontal"
            app:horizontalSpace="@dimen/space_6"
            app:verticalSpace="@dimen/space_6" />

        <TextView
            android:id="@+id/tv_submit"
            style="@style/text_b2_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_marginStart="@dimen/space_20"
            android:layout_marginTop="@dimen/space_26"
            android:layout_marginEnd="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_40"
            android:background="@drawable/bt_circle_bg_light"
            android:gravity="center"
            android:text="@string/submit" />

    </LinearLayout>

</androidx.cardview.widget.CardView>