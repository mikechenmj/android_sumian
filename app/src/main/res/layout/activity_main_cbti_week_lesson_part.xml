<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b1_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.sumian.sd.widget.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="第一周 认识睡眠" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/coordinator_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans">

                <com.sumian.sd.service.cbti.widget.CBTIWeekCourseBannerView
                    android:id="@+id/cbti_week_lesson_banner_view"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    app:layout_scrollFlags="scroll|enterAlways" />

                <LinearLayout
                    android:id="@+id/lay_lesson_tips"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_62"
                    android:background="@color/b2_color"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_scrollFlags="scroll|enterAlways"
                    tools:visibility="visible">

                    <com.sumian.sd.widget.nav.NavigationItem
                        android:id="@+id/nav_tab_lesson_review_last_week"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="gone"
                        app:tab_icon="@mipmap/ic_cbti_icon_review"
                        app:tab_text="@string/lesson_review_last_week"
                        tools:visibility="visible" />

                    <View
                        android:id="@+id/v_divider"
                        android:layout_width="@dimen/space_1"
                        android:layout_height="@dimen/space_24"
                        android:layout_gravity="center"
                        android:background="@color/l1_color"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <com.sumian.sd.widget.nav.NavigationItem
                        android:id="@+id/nav_tab_lesson_summary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:tab_icon="@mipmap/ic_cbti_icon_exercise"
                        app:tab_text="@string/the_week_lesson_summary" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_10"
                    android:background="@color/b1_color"
                    app:layout_scrollFlags="scroll|enterAlways" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40"
                    android:elevation="0dp"
                    android:outlineProvider="none"
                    android:translationZ="0dp"
                    app:tabBackground="@color/b2_color"
                    app:tabIndicatorColor="@color/b3_color"
                    app:tabIndicatorHeight="@dimen/space_1"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/b3_color"
                    app:tabTextAppearance="@style/TabTextAppearance"
                    app:tabTextColor="@color/t2_color">

                    <android.support.design.widget.TabItem
                        android:id="@+id/tab_item_scan_qr_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/course"
                        tools:ignore="HardcodedText" />

                    <android.support.design.widget.TabItem
                        android:id="@+id/tab_item_input_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/practice"
                        tools:ignore="HardcodedText" />

                </android.support.design.widget.TabLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <TextView
                android:id="@+id/tv_write_message"
                style="@style/text_b2_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_64"
                android:layout_gravity="bottom"
                android:background="@color/b3_color_day"
                android:gravity="center"
                android:text="@string/write_message"
                android:visibility="gone"
                tools:visibility="visible" />

        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>

    <com.sumian.sd.service.cbti.widget.keyboard.MsgBoardKeyBoard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>