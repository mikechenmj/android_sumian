<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_sleep_data_less_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_10"
    android:visibility="gone"
    app:cardBackgroundColor="@color/hw_colorPrimary"
    app:cardCornerRadius="@dimen/space_4"
    app:cardElevation="@dimen/space_4"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_20"
            android:gravity="center"
            android:text="@string/sleep_advice_hint"
            android:textColor="@color/bt_hole_color"
            android:textSize="@dimen/font_14"
            tools:ignore="RtlHardcoded" />

        <FrameLayout
            android:id="@+id/lay_sleep_data_less"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_material_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space_16"
            android:paddingEnd="@dimen/space_14"
            android:paddingStart="@dimen/space_20"
            android:paddingTop="@dimen/space_16"
            tools:ignore="RtlSymmetry">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="@string/sleep_data_less_hint"
                android:textColor="@color/general_color"
                android:textSize="@dimen/font_14"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:layout_width="@dimen/space_32"
                android:layout_height="@dimen/space_32"
                android:layout_gravity="right|center"
                android:contentDescription="@null"
                android:padding="@dimen/space_10"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_show_redirect"
                tools:ignore="RtlHardcoded" />

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>