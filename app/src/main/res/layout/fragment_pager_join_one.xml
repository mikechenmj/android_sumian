<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b1_color"
    android:orientation="vertical">

    <com.sumian.sleepdoctor.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/group_detail" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:background="@color/white"
                android:paddingBottom="@dimen/space_20"
                android:paddingLeft="@dimen/space_28"
                android:paddingRight="@dimen/space_28"
                android:paddingTop="@dimen/space_20">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/lay_group_icon"
                    android:layout_width="@dimen/space_92"
                    android:layout_height="@dimen/space_92"
                    android:contentDescription="@null"
                    android:elevation="@dimen/space_2"
                    android:outlineProvider="background"
                    android:src="@mipmap/ic_group_avatar"
                    android:translationZ="@dimen/space_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:qmui_border_color="@color/b2_color"
                    app:qmui_border_width="@dimen/space_4"
                    app:qmui_corner_radius="@dimen/space_4" />

                <TextView
                    android:id="@+id/tv_desc"
                    style="@style/text_t3_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_16"
                    android:ellipsize="marquee"
                    android:maxEms="11"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_doctor_name"
                    app:layout_constraintLeft_toRightOf="@id/lay_group_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="一个有十二个字符的随访群"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_doctor_name"
                    style="@style/text_t1_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14"
                    app:layout_constraintBottom_toBottomOf="@id/lay_group_icon"
                    app:layout_constraintLeft_toLeftOf="@id/tv_desc"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc"
                    tools:text="医生 : 二货" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:background="@color/b2_color"
                android:orientation="vertical">

                <TextView
                    style="@style/text_t1_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_16"
                    android:layout_marginLeft="@dimen/space_28"
                    android:layout_marginRight="@dimen/space_28"
                    android:layout_marginTop="@dimen/space_16"
                    android:gravity="center"
                    android:text="@string/brief" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_marginLeft="@dimen/space_28"
                    android:background="@color/l1_color"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_group_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_16"
                    android:layout_marginLeft="@dimen/space_28"
                    android:layout_marginRight="@dimen/space_28"
                    android:layout_marginTop="@dimen/space_16"
                    android:lines="5"
                    android:textColor="@color/t2_color"
                    android:textSize="@dimen/font_14"
                    tools:text="这里是一个群的介绍,也可以是医生信息的介绍.大萨达大所大大所大撒大大大大大大大大大大多所大大奥奥大大大大大大大大大dddddd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:background="@color/b2_color"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space_20"
                android:paddingLeft="@dimen/space_28"
                android:paddingRight="@dimen/space_28"
                android:paddingTop="@dimen/space_20">

                <TextView
                    style="@style/text_t1_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advisory" />

                <ImageView
                    android:id="@+id/iv_faq"
                    android:layout_width="@dimen/space_18"
                    android:layout_height="@dimen/space_18"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_marginRight="@dimen/space_8"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_groupdetails_icon_costdescription" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/text_t1_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_marginRight="@dimen/space_8"
                    android:text="@string/zero_money"
                    android:textColor="@color/t4_color" />

                <TextView
                    style="@style/text_t1_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/money_for_month" />

            </LinearLayout>

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/bt_join"
                style="@style/bt_t1_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_56"
                android:layout_marginLeft="@dimen/space_32"
                android:layout_marginRight="@dimen/space_32"
                android:layout_marginTop="@dimen/space_28"
                android:clickable="true"
                android:elevation="@dimen/space_1"
                android:focusable="true"
                android:text="@string/join"
                app:gTouchCornerRadius="@dimen/space_32"
                app:gTouchEffect="ripple"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/bt_re_scan"
                style="@style/SumianButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_56"
                android:layout_marginBottom="@dimen/space_32"
                android:layout_marginLeft="@dimen/space_32"
                android:layout_marginRight="@dimen/space_32"
                android:layout_marginTop="@dimen/space_28"
                android:clickable="true"
                android:elevation="@dimen/space_1"
                android:ellipsize="start"
                android:focusable="true"
                android:text="@string/re_scan"
                android:textColor="@color/b3_color"
                android:textSize="@dimen/font_20"
                android:visibility="gone"
                tools:targetApi="lollipop"
                tools:visibility="visible" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
