<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.achievement.MyAchievementActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sumian.sd.account.achievement.widget.AchievementShareView
            android:id="@+id/achievement_share_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="visible" />
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_bg_color"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_70"
            android:layout_marginRight="@dimen/space_20"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/b2_color_day"
            app:cardCornerRadius="@dimen/space_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_200"
                    android:background="@drawable/ic_popups_img_bg_medal">

                    <ImageView
                        android:id="@+id/iv_medal_icon"
                        android:layout_width="@dimen/space_114"
                        android:layout_height="@dimen/space_112"
                        android:layout_marginTop="@dimen/space_20"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_popups_days"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_20"
                        android:layout_marginEnd="@dimen/space_20"
                        android:clickable="false"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_record_h5_icon_delete3"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_medal_title"
                        style="@style/text_t5_21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_116"
                        android:background="@drawable/ic_popups_ribbon"
                        android:gravity="center"
                        android:textColor="@color/b2_color_day"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription"
                        tools:text="睡眠老司机" />

                    <TextView
                        android:id="@+id/tv_get_date"
                        style="@style/text_t5_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_20"
                        android:textColor="@color/t6_color_day"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_medal_title"
                        tools:text="2019.01.16 获得" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_medal_content_title"
                    style="@style/text_t3_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginTop="@dimen/space_30"
                    android:layout_marginRight="@dimen/space_20"
                    android:textStyle="bold"
                    tools:text="“我的睡眠健康我主宰”" />

                <com.sumian.common.h5.widget.SWebViewLayout
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_30"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_30"
                    android:layout_marginBottom="@dimen/space_30" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/text_b2_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_20"
            android:text="@string/just_so_so_share" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_share_wx"
                android:layout_width="@dimen/space_50"
                android:layout_height="@dimen/space_50"
                android:layout_marginEnd="@dimen/space_25"
                android:clickable="false"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_popups_wechat" />

            <ImageView
                android:id="@+id/iv_share_wx_circle"
                android:layout_width="@dimen/space_50"
                android:layout_height="@dimen/space_50"
                android:layout_marginStart="@dimen/space_25"
                android:layout_marginEnd="@dimen/space_25"
                android:clickable="false"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_popups_wechat_circle" />

            <ImageView
                android:id="@+id/iv_save_bitmap"
                android:layout_width="@dimen/space_50"
                android:layout_height="@dimen/space_50"
                android:layout_marginStart="@dimen/space_25"
                android:clickable="false"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_popups_local_storage" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>