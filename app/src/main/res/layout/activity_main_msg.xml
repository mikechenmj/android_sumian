<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_msg_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sumian.sleepdoctor.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:more_icon="@mipmap/nav_icon_more"
        app:show_back="true"
        app:text="群信息" />

    <FrameLayout
        android:id="@+id/adapter_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_answer"
            style="@style/text_t2_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_32"
            android:layout_gravity="center"
            android:background="@color/b4_color"
            android:gravity="center"
            android:text="@string/answer_the_question"
            android:textColor="@color/b2_color"
            android:textSize="@dimen/font_16" />

    </FrameLayout>

    <com.sumian.sleepdoctor.chat.widget.MsgRecycleView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 底部输入框区域 -->
    <com.sumian.sleepdoctor.chat.widget.KeyboardView
        android:id="@+id/keyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>