<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.tel.activity.TelBookingPublishActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_10"
                android:background="@color/l1_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b2_color"
                android:orientation="vertical">

                <com.sumian.sd.widget.divider.SettingDividerView
                    android:id="@+id/sdv_border_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:divider_line_visible="invisible"
                    app:type_content=" 已确认"
                    app:type_desc="订单状态"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_10"
                    android:background="@color/l1_color"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <com.sumian.sd.widget.divider.SettingDividerView
                    android:id="@+id/sdv_make_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    app:divider_line_visible="invisible"
                    app:type_content="请选择"
                    app:type_desc="@string/ask_time" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_marginStart="@dimen/space_20"
                    android:background="@color/l1_color" />

                <com.sumian.sd.widget.divider.SettingDividerView
                    android:id="@+id/sdv_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:divider_line_visible="invisible"
                    app:divider_more_visible="gone"
                    app:type_content="15分钟"
                    app:type_desc="预约时长" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/b2_color"
                android:orientation="vertical">

                <TextView
                    style="@style/text_t1_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_64"
                    android:padding="@dimen/space_20"
                    android:text="@string/ask_question" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_marginStart="@dimen/space_20"
                    android:background="@color/l1_color" />

                <EditText
                    android:id="@+id/et_input_ask_question"
                    style="@style/text_t2_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="@string/ask_question_hint"
                    android:inputType="textMultiLine"
                    android:maxHeight="@dimen/space_86"
                    android:maxLines="2"
                    android:padding="@dimen/space_20"
                    android:textColorHint="@color/t2_color"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:id="@+id/tv_input_ask_count"
                    style="@style/text_t2_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_marginBottom="@dimen/space_20"
                    android:gravity="right"
                    android:text="0/20"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/b2_color"
                android:orientation="vertical">

                <TextView
                    style="@style/text_t1_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_64"
                    android:background="@color/b2_color"
                    android:padding="@dimen/space_20"
                    android:text="@string/ask_more" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_marginStart="@dimen/space_20"
                    android:background="@color/l1_color" />

                <EditText
                    android:id="@+id/et_input_ask_question_more"
                    style="@style/text_t2_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="@string/ask_more_hint"
                    android:minHeight="@dimen/space_264"
                    android:padding="@dimen/space_20"
                    android:textColorHint="@color/t2_color"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:id="@+id/tv_input_count"
                    style="@style/text_t2_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_marginBottom="@dimen/space_20"
                    android:gravity="right"
                    android:text="0/400"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_submit"
                style="@style/bt_t1_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_36"
                android:layout_marginTop="@dimen/space_40"
                android:layout_marginRight="@dimen/space_36"
                android:layout_marginBottom="@dimen/space_40"
                android:gravity="center"
                android:text="@string/tel_submit" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.sumian.sd.service.widget.ServiceSuccessStateView
        android:id="@+id/service_state_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
