<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/b2_color_day"
    android:orientation="vertical"
    android:padding="@dimen/space_20">

    <EditText
        android:id="@+id/et_msg_board_input"
        style="@style/text_t2_16"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:cursorVisible="true"
        android:gravity="top"
        android:hint="@string/msg_keyboard_hint"
        android:inputType="textMultiLine"
        android:maxEms="200"
        android:minHeight="@dimen/space_180"
        android:singleLine="false"
        android:textColorHint="@color/t2_color_day"
        android:textCursorDrawable="@drawable/shape_cursor"
        tools:ignore="Autofill" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_is_anonymous"
            style="@style/text_t2_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_msg_count"
            style="@style/text_b2_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"
            android:text="0/200"
            android:textColor="@color/sel_btn_text"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>