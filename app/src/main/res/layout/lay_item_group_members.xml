<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="@dimen/space_72"
        android:layout_height="@dimen/space_72"
        android:src="@mipmap/info_avatar_doctor" />

    <TextView
        android:id="@+id/tv_nickname"
        style="@style/text_t2_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_12"
        android:textSize="@dimen/font_12"
        tools:text="欧主任" />

    <TextView
        android:id="@+id/tv_label"
        style="@style/text_t2_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_chat_doctor_label"
        android:paddingLeft="@dimen/space_2"
        android:paddingRight="@dimen/space_2"
        android:textColor="@color/b2_color"
        android:textSize="@dimen/font_12"
        tools:text="医生" />

</LinearLayout>