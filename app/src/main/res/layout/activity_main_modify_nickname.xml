<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sumian.sd.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/modify_nickname" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:background="@color/b2_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_28"
        android:paddingRight="@dimen/space_28">

        <TextView
            android:id="@+id/tv_label"
            style="@style/text_t1_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nickname" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_name"
            style="@style/edit_text_t2_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_64"
            android:layout_marginLeft="@dimen/space_16"
            android:background="@null"
            android:hint="@string/input_nickname"
            android:inputType="text"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_finish"
        style="@style/bt_t1_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space_32"
        android:layout_marginRight="@dimen/space_32"
        android:layout_marginTop="@dimen/space_28"
        android:text="@string/finish" />

</LinearLayout>