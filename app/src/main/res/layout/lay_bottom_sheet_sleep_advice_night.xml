<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b2_color_night">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_32"
            android:contentDescription="@null"
            android:src="@drawable/ic_record_h5_delete_night"
            tools:ignore="RtlHardcoded" />

        <TextView
            style="@style/text_b3_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:gravity="center"
            android:text="@string/sleep_data_less_hint"
            android:textColor="#fffefefe" />

        <TextView
            style="@style/text_t2_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:gravity="center"
            android:text="@string/sleep_advice_element"
            android:textColor="@color/t2_color_night" />

        <TextView
            android:id="@+id/tv_sleep_advice_element"
            style="@style/text_t2_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
            android:lineSpacingExtra="@dimen/space_10"
            android:textColor="@color/t2_color_night"
            tools:text="您本周未进行连续的睡眠监测,有4天未记录睡眠数据." />

        <TextView
            style="@style/text_t2_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:gravity="center"
            android:text="@string/sleep_advice_explain"
            android:textColor="@color/t2_color_night" />

        <TextView
            android:id="@+id/tv_sleep_data_less"
            style="@style/text_t2_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
            android:lineSpacingExtra="@dimen/space_10"
            android:textColor="@color/t2_color_night"
            tools:text="长期连续的睡眠监测有助于更准确地分析你的健康状况,发现睡眠健康问题,改善睡眠质量.间断监测可能会造成分析的误差" />

        <TextView
            style="@style/text_t2_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:gravity="center"
            android:text="@string/sleep_note_advice_hint"
            android:textColor="@color/t2_color_night" />

        <TextView
            android:id="@+id/tv_sleep_advice"
            style="@style/text_t2_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
            android:lineSpacingExtra="@dimen/space_10"
            android:textColor="@color/t2_color_night"
            tools:text="建议至少保证一周5天的睡眠监测,最好是连续的时间" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>