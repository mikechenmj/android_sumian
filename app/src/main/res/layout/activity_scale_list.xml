<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".scale.ScaleListActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        app:tabBackground="@color/b2_color"
        app:tabIndicatorColor="@color/b3_color"
        app:tabIndicatorHeight="@dimen/space_1"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/b3_color"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:tabTextColor="@color/t2_color">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_scan_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_evaluated"
            tools:ignore="HardcodedText" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_input_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evaluated"
            tools:ignore="HardcodedText" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>