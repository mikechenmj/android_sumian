<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/space_100"
            android:layout_height="@dimen/space_100"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_32"
            android:contentDescription="@null"
            android:src="@mipmap/info_avatar_patient"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="@dimen/space_4" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:singleLine="true"
            android:text="@string/martian"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/b1_color"
        android:orientation="vertical">

        <com.sumian.sleepdoctor.widget.divider.SettingDividerView
            android:id="@+id/dv_user_info_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:type_desc="@string/user_info_center"
            app:type_icon="@mipmap/info_icon_information" />

        <com.sumian.sleepdoctor.widget.divider.SettingDividerView
            android:id="@+id/dv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divider_line_visible="gone"
            app:type_desc="@string/setting"
            app:type_icon="@mipmap/info_icon_set" />

    </LinearLayout>

</LinearLayout>