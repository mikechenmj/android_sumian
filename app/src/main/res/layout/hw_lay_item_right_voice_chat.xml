<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:background="@drawable/shape_timeline"
        android:gravity="center"
        android:lineSpacingExtra="0dp"
        android:padding="@dimen/space_6"
        android:textSize="@dimen/font_12"
        android:visibility="gone"
        tools:ignore="RtlHardcoded"
        tools:text="8月31日 15:40"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_8"
        android:paddingLeft="@dimen/space_8"
        android:paddingRight="@dimen/space_8">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_8">

            <ImageView
                android:id="@+id/iv_msg_failed"
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:visibility="invisible"
                app:srcCompat="@mipmap/ic_advisory_caveat_l"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/loading"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_marginRight="@dimen/space_4"
                android:indeterminateDrawable="@drawable/progress_loading"
                android:visibility="invisible"
                tools:visibility="visible" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_8"
            android:layout_weight="1"
            android:background="@drawable/bg_chat_right"
            android:gravity="center|right"
            android:orientation="horizontal"
            android:padding="@dimen/space_8"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/tv_voice_duration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/bt_hole_color"
                android:textSize="@dimen/font_16"
                tools:ignore="RtlHardcoded"
                tools:text="1''" />

            <com.sumian.app.widget.VoiceProgress
                android:id="@+id/vp_progress"
                android:layout_width="@dimen/space_32"
                android:layout_height="@dimen/space_32"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:rotation="180"
                app:srcCompat="@mipmap/ic_advisory_caveat_l" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:layout_gravity="top"
            android:contentDescription="@null"
            android:padding="@dimen/space_4"
            android:src="@mipmap/ic_chat_right_default"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</LinearLayout>