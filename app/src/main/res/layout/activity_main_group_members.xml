<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b1_color"
    android:orientation="vertical"
    tools:context=".pager.activity.GroupMembersActivity">

    <com.sumian.sleepdoctor.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/members" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16" />

        <TextView
            android:id="@+id/tv_index_show"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/index_float_text_background"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="58sp"
            android:typeface="monospace"
            android:visibility="gone"
            tools:text="索引"
            tools:visibility="visible" />

        <com.sumian.sleepdoctor.chat.widget.IndexView
            android:id="@+id/index_view"
            android:layout_width="@dimen/space_32"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/space_56"
            android:layout_marginTop="@dimen/space_56"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:textSize="@dimen/font_14"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>

</LinearLayout>