<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hw_colorPrimaryDark"
    android:orientation="vertical">

    <com.sumian.hw.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/setting_hint" />

    <LinearLayout
        android:id="@+id/lay_bind_social"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_material_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/space_30"
        android:paddingStart="@dimen/space_30"
        android:visibility="visible"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/bind_wechat"
            android:textColor="@color/full_general_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_wechat_nickname"
            style="@style/text_grey_blue_16"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/space_8"
            android:ellipsize="marquee"
            android:maxEms="12"
            android:singleLine="true"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded"
            tools:text="hello" />

        <com.sumian.hw.widget.ToggleButton
            android:id="@+id/bt_bind_wechat"
            android:layout_width="@dimen/space_56"
            android:layout_height="@dimen/space_28"
            android:layout_gravity="center|right"
            android:layout_marginStart="@dimen/space_10"
            app:offBorderColor="@color/hw_colorPrimary"
            app:offColor="@color/hw_colorPrimary"
            app:onColor="@color/bt_hole_color"
            app:spotColor="@color/black"
            app:toggle_border_width="@dimen/space_1"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginStart="@dimen/space_30"
        android:background="@color/light_content_bg_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/font_14"
        android:layout_marginStart="@dimen/space_30"
        android:layout_marginTop="@dimen/space_14"
        android:text="@string/hw_setting_bind_wechat_hint"
        android:textColor="@color/general_color"
        android:textSize="@dimen/font_12" />

    <View
        style="@style/HwHorizontalDividerLine"
        android:layout_marginBottom="@dimen/space_20" />

    <com.sumian.hw.setting.widget.HwSettingItemView
        android:id="@+id/siv_modify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hw_siv_label="@string/setting_modify_pwd_hint" />

    <com.sumian.hw.setting.widget.HwSettingItemView
        android:id="@+id/siv_change_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hw_siv_label="@string/change_bind" />

    <com.sumian.hw.setting.widget.HwSettingItemView
        android:id="@+id/siv_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hw_siv_label="@string/about_us" />

    <com.sumian.hw.setting.widget.HwSettingItemView
        android:id="@+id/siv_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hw_siv_label="@string/feedback" />

    <com.sumian.hw.setting.widget.HwSettingItemView
        android:id="@+id/siv_sleep_disorders_evaluation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hw_siv_label="睡眠障碍评估表" />

    <com.sumian.hw.setting.widget.HwSettingItemView
        android:id="@+id/siv_user_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hw_siv_label="@string/user_guide" />

    <View
        style="@style/HwHorizontalDividerLine"
        android:layout_marginTop="@dimen/space_20" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_material_ripple"
        android:gravity="center"
        android:text="@string/setting_logout_hint"
        android:textColor="@color/warn_color"
        android:textSize="@dimen/font_16"
        tools:ignore="RtlHardcoded" />

    <View style="@style/HwHorizontalDividerLine" />

</LinearLayout>