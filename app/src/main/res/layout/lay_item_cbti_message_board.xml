<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/b2_color_day"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/space_20"
        tools:ignore="UselessParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:src="@mipmap/ic_info_avatar_patient" />

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/text_t1_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_10"
            android:text="@string/anonymous_nickname" />

        <TextView
            android:id="@+id/tv_topping"
            style="@style/text_b4_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_6"
            android:background="@drawable/shape_b4_border_1"
            android:paddingLeft="@dimen/space_6"
            android:paddingTop="@dimen/space_2"
            android:paddingRight="@dimen/space_6"
            android:paddingBottom="@dimen/space_2"
            android:text="@string/topping_text"
            android:visibility="invisible"
            tools:visibility="visible" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_write_time"
            style="@style/text_t2_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2018.11.03" />

        <TextView
            android:id="@+id/tv_del"
            style="@style/text_b3_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/del" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_message_board"
        style="@style/text_t1_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        tools:text="CBTI已经被国内外睡眠医学领域推荐为治疗失眠的首选方案。" />

    <LinearLayout
        android:id="@+id/lay_replay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginRight="@dimen/space_20"
        android:background="@drawable/shape_message_board_bg"
        android:orientation="vertical"
        android:padding="@dimen/space_10"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_replay_nickname"
            style="@style/text_t1_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ssd_replay" />

        <TextView
            android:id="@+id/tv_replay_msg"
            style="@style/text_t2_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            tools:text="您好，感谢您对速眠医生CBTI的认可。CBTI已经被国内外睡眠医学领域推荐为治疗失眠的首选方案。" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:background="@color/l1_color_day" />

</LinearLayout>