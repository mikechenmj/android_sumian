<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/text_t1_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_54"
        android:background="@color/b2_color"
        android:gravity="center"
        android:text="@string/ask_time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10"
        android:background="@color/l1_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_172"
        android:background="@color/b2_color"
        android:orientation="horizontal">

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/npv_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="@color/l1_color"
            app:npv_ItemPaddingHorizontal="@dimen/space_4"
            app:npv_ItemPaddingVertical="@dimen/space_4"
            app:npv_RespondChangeOnDetached="true"
            app:npv_ShowCount="3"
            app:npv_TextColorHint="@color/t1_color"
            app:npv_TextColorNormal="@color/t2_color"
            app:npv_TextColorSelected="@color/b3_color"
            app:npv_TextSizeHint="@dimen/font_16"
            app:npv_TextSizeNormal="@dimen/font_16"
            app:npv_TextSizeSelected="@dimen/font_16"
            app:npv_WrapSelectorWheel="false" />

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/npv_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="@color/l1_color"
            app:npv_ItemPaddingHorizontal="@dimen/space_4"
            app:npv_ItemPaddingVertical="@dimen/space_4"
            app:npv_RespondChangeOnDetached="true"
            app:npv_ShowCount="3"
            app:npv_TextColorHint="@color/t1_color"
            app:npv_TextColorNormal="@color/t2_color"
            app:npv_TextColorSelected="@color/b3_color"
            app:npv_TextSizeHint="@dimen/font_16"
            app:npv_TextSizeNormal="@dimen/font_16"
            app:npv_TextSizeSelected="@dimen/font_16"
            app:npv_WrapSelectorWheel="false" />

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/npv_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="@color/l1_color"
            app:npv_ItemPaddingHorizontal="@dimen/space_4"
            app:npv_ItemPaddingVertical="@dimen/space_4"
            app:npv_RespondChangeOnDetached="true"
            app:npv_ShowCount="3"
            app:npv_TextColorHint="@color/t1_color"
            app:npv_TextColorNormal="@color/t2_color"
            app:npv_TextColorSelected="@color/b3_color"
            app:npv_TextSizeHint="@dimen/font_16"
            app:npv_TextSizeNormal="@dimen/font_16"
            app:npv_TextSizeSelected="@dimen/font_16"
            app:npv_WrapSelectorWheel="false" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10"
        android:background="@color/l1_color" />

    <TextView
        android:id="@+id/tv_confirm"
        style="@style/text_t1_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_56"
        android:background="@color/b2_color"
        android:foreground="@drawable/bg_material"
        android:gravity="center"
        android:text="@string/confirm" />

</LinearLayout>