<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space_40"
        android:layout_marginRight="@dimen/space_40"
        android:background="@drawable/shape_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/space_36"
            android:layout_height="@dimen/space_38"
            android:layout_marginTop="@dimen/space_24"
            android:contentDescription="@null"
            app:srcCompat="@mipmap/firmwareupgrade_icon_equip" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_30"
            android:layout_marginTop="@dimen/space_30"
            android:text="@string/turning_on_pa_mode"
            android:textColor="#ff7d8fb3"
            android:textSize="@dimen/font_14" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="#ff434b5b" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/space_14"
            android:paddingTop="@dimen/space_14"
            android:text="@string/ok_hint"
            android:textColor="#ff7ea5f4"
            android:textSize="@dimen/font_18" />

    </LinearLayout>

</FrameLayout>