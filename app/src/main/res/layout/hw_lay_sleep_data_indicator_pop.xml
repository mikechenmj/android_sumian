<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/hw_colorPrimary"
    app:cardCornerRadius="@dimen/space_6"
    app:cardElevation="@dimen/space_4"
    app:contentPadding="@dimen/space_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_indicator_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff7ea5f4"
            android:textSize="@dimen/font_12"
            tools:text="深睡: 25min" />

        <TextView
            android:id="@+id/tv_indicator_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2"
            android:textColor="#ff7ea5f4"
            android:textSize="@dimen/font_12"
            tools:text="02:04-02:29" />

    </LinearLayout>

</android.support.v7.widget.CardView>