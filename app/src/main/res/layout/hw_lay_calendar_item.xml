<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_go_today"
            style="@style/text_b3_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/bg_material_ripple"
            android:text="@string/go_today"
            android:textColor="@color/b3_color_day"
            skin:enable="true"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:id="@+id/iv_pre"
            android:layout_width="@dimen/space_42"
            android:layout_height="@dimen/space_42"
            android:contentDescription="@null"
            android:foreground="@drawable/bg_material_ripple"
            android:padding="@dimen/space_14"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_calendar_left_day"
            skin:enable="true"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/text_b2_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:text="2017/09"
            android:textColor="@color/t2_color_day"
            skin:enable="true"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/space_42"
            android:layout_height="@dimen/space_42"
            android:contentDescription="@null"
            android:foreground="@drawable/bg_material_ripple"
            android:padding="@dimen/space_14"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_calendar_right_day"
            skin:enable="true"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_all_read"
            style="@style/text_b3_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/bg_material_ripple"
            android:text="@string/is_read"
            android:textColor="@color/b3_color_day" />
    </LinearLayout>


    <com.sumian.hw.report.calendar.CalendarView
        android:id="@+id/calender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>