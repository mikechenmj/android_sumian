<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginStart="@dimen/space_24"
        android:background="@color/deep_line_bg_color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lay_monitor_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_24"
        android:layout_marginStart="@dimen/space_24"
        android:layout_marginTop="@dimen/space_24"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:ignore="RtlHardcoded"
        tools:visibility="visible">

        <ImageView
            android:layout_width="@dimen/space_16"
            android:layout_height="@dimen/space_16"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_equip_monitor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/space_6"
            android:gravity="center"
            android:text="@string/monitoring_mode_warn"
            android:textColor="@color/dot_red_color"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bt_switch_pa"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_56"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_32"
        android:layout_marginEnd="@dimen/space_72"
        android:layout_marginStart="@dimen/space_72"
        android:layout_marginTop="@dimen/space_32"
        android:background="@drawable/bt_circle_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/space_36"
        android:paddingRight="@dimen/space_36"
        android:text="@string/turn_on_sleep_pa_mode"
        android:textColor="@color/white"
        android:textSize="@dimen/font_20"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>