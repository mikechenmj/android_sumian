<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_94"
    android:background="@color/b2_color"
    android:foreground="@drawable/bg_material_ripple">

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_t1_16"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="第1周 认识睡眠" />

    <TextView
        android:id="@+id/tv_duration"
        style="@style/text_t2_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:drawablePadding="@dimen/space_10"
        android:drawableStart="@mipmap/ic_cbti_icon_time"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="3’28”" />

    <FrameLayout
        android:layout_width="@dimen/space_68"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/space_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="@dimen/space_24"
            android:layout_height="@dimen/space_24"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_cbti_icon_course_lock"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/bt_learn"
            style="@style/text_lesson_style"
            android:layout_width="@dimen/space_68"
            android:layout_height="@dimen/space_34"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/review"
            tools:visibility="visible" />

    </FrameLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginStart="@dimen/space_20"
        android:background="@color/l1_color"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>