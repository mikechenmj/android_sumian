<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_60">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/t2_color"
                android:textSize="@dimen/font_14"
                tools:text="2018.05.01" />

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/space_20"
                android:layout_toStartOf="@id/tv_month"
                android:contentDescription="@null"
                android:padding="@dimen/space_10"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_record_icon_left" />


            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/space_20"
                android:layout_toEndOf="@id/tv_month"
                android:contentDescription="@null"
                android:padding="@dimen/space_10"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_record_icon_right" />

            <TextView
                android:id="@+id/tv_go_to_today"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/space_20"
                android:gravity="center"
                android:text="@string/go_to_today"
                android:textColor="@color/b3_color"
                android:textSize="@dimen/font_14"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/l1_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12">

            <TextView
                style="@style/CalendarDateText"
                android:text="@string/sun" />

            <TextView
                style="@style/CalendarDateText"
                android:text="@string/mon" />

            <TextView
                style="@style/CalendarDateText"
                android:text="@string/tue" />

            <TextView
                style="@style/CalendarDateText"
                android:text="@string/wed" />

            <TextView
                style="@style/CalendarDateText"
                android:text="@string/thu" />

            <TextView
                style="@style/CalendarDateText"
                android:text="@string/fri" />

            <TextView
                style="@style/CalendarDateText"
                android:text="@string/sat" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/l1_color" />

        <android.support.v4.view.ViewPager
            android:id="@+id/calender_view_pager"
            android:layout_width="match_parent"
            android:layout_height="276dp" />
    </LinearLayout>

    <View
        android:id="@+id/v_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_40" />
</LinearLayout>