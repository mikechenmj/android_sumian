<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/t2_color"
            android:textSize="@dimen/font_14"
            tools:text="2018/05" />

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_20"
            android:layout_toStartOf="@id/tv_month"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_record_icon_left" />


        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_20"
            android:layout_toEndOf="@id/tv_month"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_record_icon_right" />

        <TextView
            android:id="@+id/tv_go_to_today"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/space_20"
            android:gravity="center"
            android:text="@string/go_to_today"
            android:textColor="@color/b3_color"
            android:textSize="@dimen/font_14"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
        android:id="@+id/rvp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>