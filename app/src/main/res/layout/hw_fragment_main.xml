<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_48" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_68"
        android:layout_gravity="bottom"
        android:background="@drawable/tab_img_bg_black">

        <com.sumian.sleepdoctor.widget.nav.BottomNavigationBar
            android:id="@+id/nav_tab"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_48"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <com.sumian.sleepdoctor.widget.nav.NavigationItem
                android:id="@+id/tb_record"
                style="@style/HorizontalWeight"
                app:tab_icon="@drawable/tab_device_icon"
                app:tab_text="@string/tab_device_hint"
                app:tab_text_color="@color/hw_tab_color" />

            <include layout="@layout/lay_nav_tab_divider_dark_theme" />

            <!--hw_tab_color-->
            <com.sumian.sleepdoctor.widget.nav.NavigationItem
                android:id="@+id/tb_doctor"
                style="@style/HorizontalWeight"
                app:tab_icon="@drawable/tab_report_icon"
                app:tab_text="@string/tab_report_hint"
                app:tab_text_color="@color/hw_tab_color" />

            <include layout="@layout/lay_nav_tab_divider_dark_theme" />

            <com.sumian.sleepdoctor.widget.nav.NavigationItem
                android:id="@+id/tb_me"
                style="@style/HorizontalWeight"
                app:tab_icon="@drawable/sd_sel_tab_me_icon"
                app:tab_text="@string/tab_me_hint"
                app:tab_text_color="@color/hw_tab_color" />

            <include layout="@layout/lay_nav_tab_divider_dark_theme" />

        </com.sumian.sleepdoctor.widget.nav.BottomNavigationBar>

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:paddingTop="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/tab_icon_service" />
    </LinearLayout>
</FrameLayout>
