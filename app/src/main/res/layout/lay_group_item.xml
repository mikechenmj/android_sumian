<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_16"
    android:layout_marginLeft="@dimen/space_16"
    android:layout_marginRight="@dimen/space_16"
    android:foreground="@drawable/bg_material_ripple"
    app:cardCornerRadius="@dimen/space_4">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/space_16"
        android:visibility="visible">

        <com.sumian.sleepdoctor.widget.GroupDetailHaveDotView
            android:id="@+id/group_detail_have_dot_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/text_t3_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxEms="9"
            android:minLines="1"
            android:singleLine="true"
            android:textSize="@dimen/font_20"
            app:layout_constraintBottom_toTopOf="@+id/tv_doctor_name"
            app:layout_constraintLeft_toRightOf="@id/group_detail_have_dot_view"
            app:layout_constraintTop_toTopOf="@+id/group_detail_have_dot_view"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="一个有十二个字符的随访群" />

        <TextView
            android:id="@+id/tv_doctor_name"
            style="@style/text_t1_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxEms="10"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:textSize="@dimen/font_16"
            app:layout_constraintBottom_toTopOf="@+id/tv_expired"
            app:layout_constraintStart_toStartOf="@+id/tv_desc"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc"
            tools:text="医生 : 二货" />

        <TextView
            android:id="@+id/tv_expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:background="@drawable/bg_tab_dot"
            android:maxLines="1"
            android:minLines="1"
            android:paddingBottom="@dimen/space_4"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:paddingTop="@dimen/space_4"
            android:singleLine="true"
            android:textColor="@color/b2_color"
            android:textSize="@dimen/font_12"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/group_detail_have_dot_view"
            app:layout_constraintStart_toStartOf="@+id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name"
            tools:text="5天后过期" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="120dp" />

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginTop="@dimen/space_16"
            android:background="@color/l1_color"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/group_detail_have_dot_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            tools:visibility="visible" />

        <com.sumian.sleepdoctor.widget.MsgCacheLabelView
            android:id="@+id/cache_msg_two_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="@+id/v_line"
            app:layout_constraintTop_toBottomOf="@+id/v_line" />

        <com.sumian.sleepdoctor.widget.MsgCacheLabelView
            android:id="@+id/cache_msg_one_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="@+id/cache_msg_two_view"
            app:layout_constraintTop_toBottomOf="@+id/cache_msg_two_view" />

        <TextView
            android:id="@+id/tv_msg_reply_label"
            style="@style/text_t2_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxEms="16"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:textColor="@color/t4_color"
            android:textSize="@dimen/font_16"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="@id/cache_msg_one_view"
            app:layout_constraintTop_toBottomOf="@id/cache_msg_one_view"
            tools:text="[收到新的医生回复]"
            tools:visibility="visible" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/lay_expired_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/s4_color"
        android:visibility="gone"
        tools:visibility="visible">

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/bt_expired"
            style="@style/bt_t2_group_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_44"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/space_32"
            android:paddingRight="@dimen/space_32"
            android:text="@string/expired"
            app:gTouchCornerRadius="@dimen/space_32"
            app:gTouchEffect="ripple" />

    </FrameLayout>

</android.support.v7.widget.CardView>