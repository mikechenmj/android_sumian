<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b1_color_day"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/lay_doctor_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/b3_color"
        android:paddingTop="@dimen/status_bar_height">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_t2_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tab_doctor"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_notification"
            style="@style/NotificationIcon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_44"
            android:layout_marginEnd="@dimen/space_15"
            android:contentDescription="@null"
            android:visibility="invisible"
            tools:visibility="visible" />
    </FrameLayout>

    <com.sumian.sd.buz.doctor.doctor.DoctorDetailLayout
        android:id="@+id/doctor_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.sumian.sd.widget.RequestScanQrCodeView
        android:id="@+id/request_scan_qr_code_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>