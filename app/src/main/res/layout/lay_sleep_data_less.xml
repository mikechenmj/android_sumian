<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_sleep_data_less_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_10"
    android:layout_marginRight="@dimen/space_10"
    android:layout_marginBottom="@dimen/space_10"
    android:visibility="gone"
    app:cardBackgroundColor="@color/b2_color_day"
    app:cardCornerRadius="@dimen/space_4"
    app:cardElevation="0dp"
    skin:enable="true"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/text_t1_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:gravity="center"
            android:text="@string/sleep_advice_hint"
            android:textColor="@color/t1_color_day"
            skin:enable="true"
            tools:ignore="MissingPrefix,RtlHardcoded" />

        <FrameLayout
            android:id="@+id/lay_sleep_data_less"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_material_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/space_20"
            android:paddingTop="@dimen/space_16"
            android:paddingEnd="@dimen/space_14"
            android:paddingBottom="@dimen/space_16"
            tools:ignore="RtlSymmetry">

            <TextView
                style="@style/text_t1_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="@string/sleep_data_less_hint"
                android:textColor="@color/t1_color_day"
                skin:enable="true"
                tools:ignore="MissingPrefix,RtlHardcoded" />

            <ImageView
                android:layout_width="@dimen/space_32"
                android:layout_height="@dimen/space_32"
                android:layout_gravity="right|center"
                android:contentDescription="@null"
                android:padding="@dimen/space_10"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_report_right_day"
                skin:enable="true"
                tools:ignore="MissingPrefix,RtlHardcoded" />

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>