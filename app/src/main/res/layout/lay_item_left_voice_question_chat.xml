<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_8"
    android:paddingLeft="@dimen/space_20"
    android:paddingRight="@dimen/space_20"
    android:paddingTop="@dimen/space_4">

    <TextView
        android:id="@+id/tv_time_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineSpacingExtra="0dp"
        android:padding="@dimen/space_6"
        android:textSize="@dimen/font_12"
        android:visibility="gone"
        tools:ignore="RtlHardcoded"
        tools:text="8月31日 15:40"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/text_t2_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            tools:text="欧主任" />

        <TextView
            android:id="@+id/tv_label"
            style="@style/text_t2_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@drawable/bg_chat_doctor_label"
            android:paddingLeft="@dimen/space_2"
            android:paddingRight="@dimen/space_2"
            android:textColor="@color/b2_color"
            android:textSize="@dimen/font_12"
            android:visibility="invisible"
            tools:text="医生"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/space_44"
            android:layout_height="@dimen/space_44"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@mipmap/ic_info_avatar_doctor"
            tools:ignore="RtlHardcoded" />

        <FrameLayout
            android:layout_width="@dimen/space_60"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:background="@drawable/group_chatbubble_l"
            android:minHeight="@dimen/space_40">

            <ImageView
                android:id="@+id/biv_image"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_gravity="center|left"
                android:contentDescription="@null"
                android:paddingBottom="@dimen/space_1"
                android:paddingTop="@dimen/space_1"
                android:scaleType="fitCenter"
                android:src="@drawable/voice_anim_l"
                tools:ignore="RtlHardcoded" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:id="@+id/voice_dot"
                android:layout_width="@dimen/space_8"
                android:layout_height="@dimen/space_8"
                android:background="@drawable/bg_tab_dot"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_voice_duration"
                style="@style/text_t2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="60 ''" />
        </FrameLayout>

        <com.sumian.sleepdoctor.chat.widget.MsgSendErrorView
            android:id="@+id/msg_send_error_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12" />

    </LinearLayout>


</LinearLayout>