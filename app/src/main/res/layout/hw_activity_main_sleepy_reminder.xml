<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hw_colorPrimaryDark"
    android:orientation="vertical">

    <com.sumian.hw.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/sleepy_notice_hint" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_28">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="@string/sleepy_notice_hint"
            tools:ignore="RtlHardcoded" />

        <com.sumian.hw.widget.ToggleButton
            android:id="@+id/tb_reminder"
            android:layout_width="@dimen/space_56"
            android:layout_height="@dimen/space_28"
            android:layout_gravity="center|right"
            app:offBorderColor="@color/hw_colorPrimary"
            app:offColor="@color/hw_colorPrimary"
            app:onColor="@color/bt_hole_color"
            app:spotColor="@color/colorPrimaryDark"
            app:toggle_border_width="@dimen/space_1"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/deep_line_bg_color" />

    <TextView
        android:id="@+id/tv_reminder_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_24"
        android:layout_marginRight="@dimen/space_24"
        android:layout_marginTop="@dimen/space_24"
        android:gravity="center|left"
        android:text="@string/sleepy_notice_note_hint"
        android:textColor="@color/general_color"
        android:visibility="visible"
        tools:ignore="RtlHardcoded"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/lay_timer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/space_28"
        android:visibility="gone"
        tools:visibility="visible">

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:npv_DividerColor="@color/light_line_bg_color"
            app:npv_HintText=":"
            app:npv_ItemPaddingHorizontal="5dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_MarginStartOfHint="@dimen/space_60"
            app:npv_MaxValue="23"
            app:npv_MinValue="00"
            app:npv_RespondChangeOnDetached="false"
            app:npv_ShowCount="5"
            app:npv_TextArray="@array/reminder_hour"
            app:npv_TextColorHint="@color/bt_hole_color"
            app:npv_TextColorNormal="@color/general_color"
            app:npv_TextColorSelected="@color/bt_hole_color"
            app:npv_TextSizeHint="@dimen/font_24"
            app:npv_TextSizeNormal="@dimen/font_16"
            app:npv_TextSizeSelected="@dimen/font_30"
            app:npv_WrapSelectorWheel="true" />

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:npv_DividerColor="@color/light_line_bg_color"
            app:npv_ItemPaddingHorizontal="5dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_MaxValue="59"
            app:npv_MinValue="00"
            app:npv_RespondChangeOnDetached="false"
            app:npv_ShowCount="5"
            app:npv_TextArray="@array/reminder_min"
            app:npv_TextColorHint="@color/bt_hole_color"
            app:npv_TextColorNormal="@color/general_color"
            app:npv_TextColorSelected="@color/bt_hole_color"
            app:npv_TextSizeHint="@dimen/font_24"
            app:npv_TextSizeNormal="@dimen/font_16"
            app:npv_TextSizeSelected="@dimen/font_30"
            app:npv_WrapSelectorWheel="true" />

    </LinearLayout>

</LinearLayout>