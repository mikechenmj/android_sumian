<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b1_color_day"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_name_avatar"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:background="@color/white"
                android:gravity="bottom"
                android:paddingStart="@dimen/space_20"
                android:paddingEnd="@dimen/space_20"
                android:paddingBottom="@dimen/space_20">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/text_t3_18"
                        android:textSize="@dimen/font_20"
                        android:textStyle="bold"
                        tools:text="张三" />

                    <TextView
                        style="@style/text_t2_14"
                        android:layout_marginTop="@dimen/space_10"
                        android:text="@string/homepage_sleep_slogan" />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/space_60"
                    android:layout_height="@dimen/space_60"
                    android:elevation="@dimen/space_4"
                    android:translationZ="@dimen/space_4"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/space_5"
                    tools:src="@mipmap/ic_info_avatar_patient" />
            </LinearLayout>

            <com.sumian.sd.homepage.widget.CbtiProgressView
                android:id="@+id/cbti_progress_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <com.sumian.sd.homepage.widget.SleepPrescriptionView
                android:id="@+id/sleep_prescription_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.sumian.sd.homepage.widget.SleepDataPagerView
                android:id="@+id/sleep_data_pager_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <com.sumian.sd.device.widget.DeviceCardView
                android:id="@+id/device_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/space_3"
                android:paddingTop="@dimen/space_6"
                android:paddingEnd="@dimen/space_3">

                <TextView
                    android:id="@+id/tv_scale"
                    style="@style/text_t1_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_home_icon_scale"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/scale_evaluation" />

                <View
                    style="@style/VerticalDividerLine"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/tv_relaxation"
                    style="@style/text_t1_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_home_icon_relaxation"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/relax_exercise" />

                <View
                    style="@style/VerticalDividerLine"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/tv_sleep_health"
                    style="@style/text_t1_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_home_icon_sleephygiene"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/sleep_health" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>