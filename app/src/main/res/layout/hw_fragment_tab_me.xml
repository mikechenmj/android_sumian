<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_content_bg_color"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ll_user_info_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_210"
        android:background="@color/light_content_bg_color"
        android:paddingTop="@dimen/status_bar_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/space_80"
                android:layout_height="@dimen/space_80"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@mipmap/ic_info_avatar_patient"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="@dimen/space_4" />

            <Space
                android:layout_width="0dp"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/tv_nickname"
                style="@style/text_t1_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_18"
                tools:text="@string/martian" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/siv_customer_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:foreground="@drawable/bg_material_ripple"
            android:scaleType="fitXY"
            android:src="@drawable/ic_info_customerservice_black"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.sumian.sd.widget.divider.SettingDividerView
            android:id="@+id/siv_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_64"
            android:layout_marginTop="@dimen/space_10"
            android:background="@color/light_content_bg_color"
            app:divider_line_visible="gone"
            app:type_desc="@string/setting"
            app:type_desc_text_color="#98add9"
            app:type_icon="@mipmap/ic_info_icon_set" />
    </LinearLayout>

</LinearLayout>