<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hw_colorPrimary"
    android:orientation="vertical">

    <com.sumian.app.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/login_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_32"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/space_28"
        android:paddingStart="@dimen/space_28">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:contentDescription="@null"
            android:padding="@dimen/space_12"
            app:srcCompat="@mipmap/ic_login_phone" />

        <View
            android:layout_width="@dimen/divider_px_1"
            android:layout_height="@dimen/space_28"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/login_line_color" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_mobile"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_56"
            android:layout_marginStart="@dimen/space_8"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/login_mobile_hint"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/general_color"
            android:textColorHint="@color/general_color"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginEnd="@dimen/space_18"
        android:layout_marginStart="@dimen/space_18"
        android:background="@color/login_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_28"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:contentDescription="@null"
            android:padding="@dimen/space_12"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_login_pwd" />

        <View
            android:layout_width="@dimen/divider_px_1"
            android:layout_height="@dimen/space_28"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/login_line_color" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_56"
            android:layout_marginStart="@dimen/space_8"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="@string/login_pwd_hint"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/general_color"
            android:textColorHint="@color/general_color"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/iv_pwd_show"
            android:layout_width="@dimen/space_48"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_12"
            android:contentDescription="@null"
            android:padding="@dimen/space_12"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_pwd_hide"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginEnd="@dimen/space_18"
        android:layout_marginStart="@dimen/space_18"
        android:background="@color/login_line_color" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_56"
        android:layout_marginEnd="@dimen/space_28"
        android:layout_marginStart="@dimen/space_28"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/bt_circle_bg"
        android:gravity="center"
        android:text="@string/login_hint"
        android:textColor="@color/white"
        android:textSize="@dimen/font_20"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_20"
        android:gravity="center"
        android:text="@string/forget_pwd_hint"
        android:textColor="@color/general_color"
        android:textSize="@dimen/font_16" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>