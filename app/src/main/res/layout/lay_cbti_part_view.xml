<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_94">

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_t1_16"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="第1周 认识睡眠" />

    <FrameLayout
        android:id="@+id/lay_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/space_18"
            android:layout_height="@dimen/space_18"
            android:progress="100"
            android:secondaryProgress="10"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_cbti_status"
            android:layout_width="@dimen/space_18"
            android:layout_height="@dimen/space_18"
            android:contentDescription="@null"
            app:srcCompat="@mipmap/ic_home_icon_cbti_complete" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_status"
        style="@style/text_b3_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_10"
        android:text="@string/finished"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/lay_icon_container"
        app:layout_constraintLeft_toRightOf="@id/lay_icon_container"
        app:layout_constraintTop_toTopOf="@id/lay_icon_container" />

    <ImageView
        android:layout_width="@dimen/space_10"
        android:layout_height="@dimen/space_16"
        android:layout_marginRight="@dimen/space_20"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_record_icon_right"
        tools:ignore="RtlHardcoded" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginStart="@dimen/space_20"
        android:background="@color/l1_color"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>