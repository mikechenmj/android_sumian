<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sumian.app.improve.widget.SwitchDateView
        android:id="@+id/switch_date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.sumian.app.widget.refresh.BlueRefreshView
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.sumian.app.improve.widget.TouchDailySleepHistogramView
                    android:id="@+id/day_sleep_histogram_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_200"
                    android:gravity="center" />

                <com.sumian.app.improve.widget.ReportIndicatorRuleView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.sumian.app.improve.widget.ReportSleepDurationView
                    android:id="@+id/report_sleep_duration_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_20" />

                <com.sumian.app.improve.widget.note.SleepNoteView
                    android:id="@+id/sleep_note_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <android.support.v7.widget.CardView
                    android:id="@+id/doctor_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/light_content_bg_color"
                    app:cardCornerRadius="@dimen/space_10"
                    app:cardElevation="@dimen/space_2"
                    app:contentPadding="@dimen/space_20"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="医生建议:"
                            android:textColor="@color/full_general_color"
                            android:textSize="@dimen/font_14"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_doctor_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_14"
                            android:lineSpacingExtra="@dimen/space_4"
                            android:textColor="@color/full_general_color"
                            android:textSize="@dimen/font_14"
                            tools:ignore="HardcodedText"
                            tools:text="您9月13日的睡眠质量一般，夜醒时间较长，可能会导致您感觉睡眠不足，建议您尝试日间锻炼身体。睡前整理好自己的心情。" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.sumian.app.widget.refresh.BlueRefreshView>
</LinearLayout>