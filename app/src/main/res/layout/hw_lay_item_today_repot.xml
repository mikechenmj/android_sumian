<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sumian.hw.report.widget.SwitchDateView
        android:id="@+id/switch_date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.sumian.hw.widget.refresh.BlueRefreshView
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.sumian.hw.report.widget.histogram.TouchDailySleepHistogramView
                    android:id="@+id/day_sleep_histogram_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_200"
                    android:gravity="center" />

                <com.sumian.hw.report.widget.ReportIndicatorRuleView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.sumian.hw.report.widget.ReportSleepDurationView
                    android:id="@+id/report_sleep_duration_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_20"
                    android:background="?attr/b2"
                    app:cardBackgroundColor="?attr/b2" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.sumian.hw.widget.refresh.BlueRefreshView>
</LinearLayout>