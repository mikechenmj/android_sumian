<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sumian.common.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/setting_modify_pwd_hint" />

    <FrameLayout
        android:id="@+id/lay_pwd_pop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:background="@color/warn_bg_color"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_error_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/space_8"
            android:drawableStart="@mipmap/ic_pop"
            android:gravity="center"
            android:text="@string/verify_pwd_error_hint"
            android:textColor="@color/warn_color" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/space_36"
        android:paddingStart="@dimen/space_36">

        <LinearLayout
            android:id="@+id/ll_old_password_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_56"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="@string/setting_set_old_pwd_hint"
                android:inputType="textPassword"
                android:textColor="@color/general_color"
                android:textColorHint="@color/general_color"
                android:textCursorDrawable="@drawable/bg_cursor"
                android:textSize="@dimen/edit_text_text_size"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/iv_old_pwd_show"
                android:layout_width="@dimen/space_48"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:padding="@dimen/space_12"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_pwd_hide"
                tools:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_px_1"
            android:background="@color/login_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_56"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="@string/setting_new_pwd_hint"
                android:inputType="textPassword"
                android:textColor="@color/general_color"
                android:textColorHint="@color/general_color"
                android:textCursorDrawable="@drawable/bg_cursor"
                android:textSize="@dimen/edit_text_text_size"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/iv_new_pwd_show"
                android:layout_width="@dimen/space_48"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:padding="@dimen/space_12"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_pwd_hide"
                tools:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_px_1"
            android:background="@color/login_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_re_new_pwd"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_56"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="@string/setting_re_set_new_pwd_hint"
                android:inputType="textPassword"
                android:textColor="@color/general_color"
                android:textColorHint="@color/general_color"
                android:textCursorDrawable="@drawable/bg_cursor"
                android:textSize="@dimen/edit_text_text_size"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/iv_re_new_pwd_show"
                android:layout_width="@dimen/space_48"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:padding="@dimen/space_12"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_pwd_hide"
                tools:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_px_1"
            android:background="@color/login_line_color" />

        <Button
            android:id="@+id/bt_save"
            style="@style/SumianButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_56"
            android:layout_marginTop="@dimen/space_40"
            android:gravity="center"
            android:text="@string/setting_save_hint" />
    </LinearLayout>
</LinearLayout>