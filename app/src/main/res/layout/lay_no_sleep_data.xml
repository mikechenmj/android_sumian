<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_no_sleep_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tv_no_sleep_data_title"
        style="@style/text_t1_18"
        android:text="@string/today_no_record"
        android:textColor="@color/b3_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_no_sleep_data_desc"
        style="@style/text_t2_14"
        android:layout_marginTop="@dimen/space_10"
        android:text="@string/today_no_record_hint" />

    <TextView
        android:id="@+id/btn_for_no_data"
        style="@style/SumianButton"
        android:layout_width="@dimen/space_150"
        android:layout_marginEnd="@dimen/space_36"
        android:layout_marginStart="@dimen/space_36"
        android:layout_marginTop="@dimen/space_24"
        android:text="@string/go_record" />
</LinearLayout>