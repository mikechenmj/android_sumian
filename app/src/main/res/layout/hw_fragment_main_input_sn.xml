<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff212329"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/lay_pop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:background="@color/warn_bg_color"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_pop_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/space_8"
            android:drawableStart="@mipmap/ic_pop"
            android:gravity="center"
            android:textColor="@color/warn_color"
            android:textSize="@dimen/font_16" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_32"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/space_28"
        android:paddingStart="@dimen/space_28">

        <TextView
            android:id="@+id/tv_modify_label"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:contentDescription="@null"
            android:gravity="center"
            android:text="SN码"
            android:textSize="@dimen/font_16"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="@dimen/space_1"
            android:layout_height="@dimen/space_28"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:background="@color/login_line_color" />

        <EditText
            android:id="@+id/et_sn"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_56"
            android:layout_marginStart="@dimen/space_8"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入速眠仪上的SN码"
            android:inputType="text"
            android:maxLength="24"
            android:textColor="@color/general_color"
            android:textColorHint="@color/general_color"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textSize="@dimen/edit_text_text_size"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginEnd="@dimen/space_18"
        android:layout_marginStart="@dimen/space_18"
        android:background="@color/login_line_color" />

    <Button
        android:id="@+id/bt_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/bt_circle_bg"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18"
        tools:ignore="ButtonStyle,HardcodedText" />

</LinearLayout>