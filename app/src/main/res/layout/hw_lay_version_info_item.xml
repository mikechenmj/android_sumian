<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_material_ripple"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_12"
        android:paddingStart="@dimen/space_24"
        android:paddingTop="@dimen/space_12"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/monitor_upgrade"
            android:textColor="@color/general_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded" />

        <View
            android:id="@+id/v_upgrade_dot"
            android:layout_width="@dimen/space_6"
            android:layout_height="@dimen/space_6"
            android:layout_marginLeft="@dimen/space_4"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/bg_dot"
            android:visibility="gone"
            tools:visibility="visible" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:textColor="@color/general_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded"
            tools:text="A11171500028" />

        <ImageView
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:layout_gravity="right|center"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_show_redirect"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px_1"
        android:layout_marginStart="@dimen/space_16"
        android:background="@color/light_line_bg_color" />

</LinearLayout>