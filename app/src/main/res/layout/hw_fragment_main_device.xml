<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_content_bg_color"
    android:orientation="vertical">

    <com.sumian.hw.improve.widget.device.DeviceGuideStepOneView
        android:id="@+id/device_guide_step_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.sumian.hw.improve.widget.device.DeviceStatusView
        android:id="@+id/device_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />


    <com.sumian.hw.improve.widget.device.FloatGroupView
        android:id="@+id/float_group_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/space_108"
        android:visibility="gone"
        tools:ignore="RtlHardcoded"
        tools:visibility="visible" />

</FrameLayout>