<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_24"
        android:background="@color/b3_color" />

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:background="@color/b3_color">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            tools:ignore="RelativeOverlap"
            tools:text="2018/05/30" />

        <ImageView
            android:id="@+id/iv_date_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_toEndOf="@id/tv_date"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="centerInside"
            android:src="@drawable/sel_nav_date_arrow" />

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_16"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_nav_icon_news_unread" />


        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_toStartOf="@id/iv_notification"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_nav_icon_scan" />
    </RelativeLayout>

    <com.sumian.sleepdoctor.widget.calendar.calendarViewWrapper.CalendarViewWrapper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone" />

    <com.sumian.sleepdoctor.improve.widget.DoctorServiceItemView
        android:id="@+id/dsiv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_130" />
</LinearLayout>