<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_62"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/b3_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RelativeOverlap"
            tools:text="2018/05/30" />

        <ImageView
            android:id="@+id/iv_date_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_toEndOf="@id/tv_date"
            android:contentDescription="@null"
            android:padding="@dimen/space_10"
            android:scaleType="centerInside"
            android:src="@drawable/sel_nav_date_arrow"
            android:tint="@color/b3_color" />

        <ImageView
            android:id="@+id/iv_weekly_report"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_sleepdiary_icon_weeklyreport" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_10" />

            <com.sumian.sleepdoctor.sleepRecord.view.SleepRecordView
                android:id="@+id/sleep_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_service_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

            <com.sumian.sleepdoctor.widget.doctor.DoctorServiceItemView
                android:id="@+id/dsiv_sleep_scale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:dsiv_desc="@string/fill_scale_hint"
                app:dsiv_image="@mipmap/ic_scale"
                app:dsiv_title="@string/sleep_scale" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
