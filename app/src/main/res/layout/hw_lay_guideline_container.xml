<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_guide_line">

    <ImageView
        android:id="@+id/iv_guideline_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        tools:srcCompat="@mipmap/rotation_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tv_guideline_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_30"
            android:layout_marginStart="@dimen/space_30"
            android:layout_marginTop="@dimen/space_84"
            android:text="开启监测仪"
            android:textColor="@color/bt_hole_color"
            android:textSize="@dimen/font_20"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_guideline_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_30"
            android:layout_marginStart="@dimen/space_30"
            android:layout_marginTop="@dimen/space_10"
            android:text="将监测仪佩戴在手腕，长按3s，实时监测睡眠情况。"
            android:textColor="@color/full_general_color"
            android:textSize="@dimen/font_14"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_action"
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_48"
            android:layout_gravity="bottom|center"
            android:background="@drawable/bg_guideline"
            android:text="@string/first_use"
            android:textColor="#ff7ea5f4"
            android:textSize="@dimen/font_16"
            android:visibility="invisible"
            tools:visibility="visible" />

        <com.sumian.hw.widget.GuidelineIndicator
            android:id="@+id/guideline_indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:orientation="horizontal" />

    </LinearLayout>

</FrameLayout>