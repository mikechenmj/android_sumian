<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sumian.sleepdoctor">

    <!-- 基础模块（必须加入以下声明）START -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 基础模块 END -->

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_sleepdoctor_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sleepdoctor_icon_round"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:name,android:icon,android:theme">
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="@string/umeng_app_key" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}" />
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowing"
            android:value="true" />

        <activity
            android:name=".pager.activity.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/BaseAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data
                    android:host="${host}"
                    android:scheme="${scheme}" />

                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".account.login.LoginActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".account.userProfile.ImproveUserProfileOneActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".account.userProfile.ImproveUserProfileTwoActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".account.userProfile.UserProfileActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".pager.activity.ConfigActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".improve.doctor.activity.ShoppingCarActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".pager.activity.ScanGroupResultActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".pager.activity.SettingActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".chat.activity.MsgActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".pager.activity.GroupDetailActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".pager.activity.GroupQrCodeActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".pager.activity.GroupMembersActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".pager.activity.ModifyNicknameActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".pager.activity.OtherUserProfileActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".account.bindMobile.BindMobileActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".improve.doctor.activity.ScanDoctorQrCodeActivity"
            android:theme="@style/scan_qr_theme" />

        <!-- third  login -->

        <activity
            android:name=".wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- pay start -->

        <activity
            android:name="com.pingplusplus.android.PaymentActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" /> <!-- WeChat -->
        <activity-alias
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:targetActivity="com.pingplusplus.android.PaymentActivity" />

        <!-- Alipay -->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:exported="false"
            android:screenOrientation="behind" />
        <activity
            android:name="com.alipay.sdk.auth.AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:exported="false"
            android:screenOrientation="behind" />
        <activity android:name=".improve.doctor.activity.DoctorWebActivity" />
        <activity android:name=".improve.doctor.activity.DoctorServiceWebActivity" />

        <!-- 实时通信模块、推送（均需要加入以下声明） START -->
        <!-- 实时通信模块、推送都要使用 PushService -->
        <service android:name="com.avos.avoscloud.PushService" />

        <receiver
            android:name=".push.PushReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.sumian.sd.action.PUSH" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action
                    android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife" />
            </intent-filter>
        </receiver>
        <!-- 实时通信模块、推送 END -->

        <activity android:name=".h5.SimpleWebActivity" />
        <!-- online report -->
        <activity android:name=".onlinereport.OnlineReportListActivity" />
        <activity android:name=".onlinereport.OnlineReportDetailActivity" />

        <!-- notification -->
        <activity android:name=".notification.NotificationListActivity" />

        <!-- sleep record -->
        <activity android:name=".sleepRecord.FillSleepRecordActivity" />
        <activity android:name=".sleepRecord.SleepRecordActivity" />
        <activity
            android:name=".improve.advisory.activity.AdvisoryListActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".improve.advisory.activity.AdvisoryDetailActivity"
            android:theme="@style/BaseAppTheme" />

        <!-- scale -->
        <activity android:name=".scale.ScaleListActivity" />
        <activity android:name=".scale.ScaleDetailActivity" />
        <activity
            android:name=".improve.advisory.activity.PublishAdvisoryRecordActivity"
            android:theme="@style/BaseAppTheme" />
        <activity android:name=".notification.RefundActivity" />
        <activity android:name=".h5.SleepFileWebActivity" />
    </application>

</manifest>