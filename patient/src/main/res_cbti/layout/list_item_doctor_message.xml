<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_doctor_message_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/ic_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        tools:src="@drawable/ic_notification_doctor_message" />

    <ImageView
        android:id="@+id/iv_message_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@id/ic_left"
        android:layout_alignEnd="@id/ic_left"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-5dp"
        android:src="@drawable/shape_circle_t4"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        style="@style/text_t1_16"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/ic_left"
        android:text="@string/doctor_message" />

    <TextView
        android:id="@+id/tv_doctor_message"
        style="@style/text_t2_14"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/ic_left"
        tools:text="no_doctor_message_yet" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/text_t2_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        tools:ignore="RelativeOverlap"
        tools:text="2019.03.21 18:25" />
</RelativeLayout>