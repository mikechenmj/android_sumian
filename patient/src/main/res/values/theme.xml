<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/b1_color</item>
        <!--<item name="android:navigationBarColor">@android:color/white</item>-->
        <item name="android:windowAnimationStyle">@style/AnimationStyle</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/t1_color</item>
    </style>

    <style name="BaseAppTheme.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BaseAppTheme.TranslucentStatus">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowOverscan">true</item>
    </style>

    <style name="BaseAppTheme.TranslucentStatus.Examine">
        <item name="android:windowBackground">@color/examine_background</item>
    </style>

    <style name="PlayActivityTheme" parent="@style/BaseAppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="HwAppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hw_colorPrimary</item>
        <item name="colorPrimaryDark">@color/hw_colorPrimary</item>
        <item name="colorAccent">@color/hw_colorPrimary</item>
        <item name="android:windowBackground">@color/hw_colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="DialogActivity" parent="BaseAppTheme.Fullscreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--默认的 activity 切换的动画-->
    <style name="AnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="MainActivity" parent="BaseAppTheme.TranslucentStatus" />

    <style name="SumianLoadingDialog">
        <!-- 默认背景是白色的圆角矩形，改为透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item> <!-- 默认平铺在界面顶部，为true之后会悬浮在中间，有阴影 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="SumianLoadingDialog.NotDim">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog_change_clarity" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/dialog_bg_color</item>
    </style>

    <style name="full_screen_dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--<item name="android:backgroundDimEnabled">false</item>-->
    <style name="FullScreenDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BaseAppTheme.TranslucentStatus.TranslucentBg" parent="BaseAppTheme.TranslucentStatus">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="BaseAppTheme.TranslucentStatus.DialogActivity" parent="BaseAppTheme.TranslucentStatus">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black_50</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>