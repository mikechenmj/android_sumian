<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/doctor_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_170"
            android:background="@color/b3_color">

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/space_90"
                android:layout_height="@dimen/space_90"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:contentDescription="@null"
                android:src="@mipmap/ic_info_avatar_doctor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:qmui_border_color="@color/b2_color"
                app:qmui_border_width="@dimen/space_4"
                app:qmui_is_circle="true" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_t3_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:drawableEnd="@drawable/ic_doctor_introduction"
                android:drawablePadding="@dimen/space_10"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:minLines="1"
                android:singleLine="true"
                android:textColor="@color/b2_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_desc"
                app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
                app:layout_constraintTop_toTopOf="@id/iv_avatar"
                tools:text="张三" />

            <TextView
                android:id="@+id/tv_desc"
                style="@style/text_t1_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:ellipsize="marquee"
                android:lineSpacingExtra="@dimen/space_4"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="2"
                android:minLines="1"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
                app:layout_constraintRight_toRightOf="@id/space"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                tools:visibility="visible"
                tools:text="哈尔滨医科大学附属第一医院 睡眠医学中心睡眠医学中心科室dadasdadaddsada" />

            <Space
                android:id="@+id/space"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/siv_customer_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_info_customerservice" />


        <LinearLayout
            android:id="@+id/lay_doctor_service_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/b2_color"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                style="@style/text_t2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginBottom="@dimen/space_20"
                android:gravity="center"
                android:text="@string/service"
                android:textColor="@color/t1_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginLeft="@dimen/space_20"
                android:background="@color/l1_color"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>