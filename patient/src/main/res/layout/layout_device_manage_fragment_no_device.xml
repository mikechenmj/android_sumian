<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vg_no_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:ignore="MissingDefaultResource"
    tools:visibility="gone">

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_t3_16"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="@string/add_device"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sub_title"
        style="@style/text_t2_14"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/please_keep_nearly" />

    <View
        style="@style/HorizontalDividerLineMarginStart20L3"
        android:layout_marginTop="20dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_add_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:src="@drawable/ic_equip_icon_adddevice" />

    <ImageView
        android:id="@+id/iv_open_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:src="@drawable/ic_equip_icon_bluetooth"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_add_device_hint"
        style="@style/text_t2_14"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/click_btn_add_device" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2" />
</LinearLayout>