<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/b1_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_t1_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_54"
        android:background="@color/b2_color"
        android:foreground="@drawable/bg_material_ripple"
        android:gravity="center"
        tools:text="@string/set_remind_time" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.sumian.common.widget.picker.NumberPickerView
                android:id="@+id/picker_day"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_170"
                android:layout_weight="1"
                android:background="@color/b2_color"
                android:visibility="gone"
                app:npv_DividerColor="@color/l1_color"
                app:npv_ItemPaddingHorizontal="5dp"
                app:npv_ItemPaddingVertical="5dp"
                app:npv_RespondChangeOnDetached="true"
                app:npv_ShowCount="3"
                app:npv_TextColorHint="@color/t1_color"
                app:npv_TextColorNormal="@color/t2_color"
                app:npv_TextColorSelected="@color/b3_color"
                app:npv_TextSizeHint="@dimen/font_20"
                app:npv_TextSizeNormal="16sp"
                app:npv_TextSizeSelected="20sp"
                app:npv_WrapSelectorWheel="true"
                tools:visibility="visible"/>

            <com.sumian.common.widget.picker.NumberPickerView
                android:id="@+id/picker_hour"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_170"
                android:layout_weight="1"
                android:background="@color/b2_color"
                android:visibility="visible"
                app:npv_DividerColor="@color/l1_color"
                app:npv_ItemPaddingHorizontal="5dp"
                app:npv_ItemPaddingVertical="5dp"
                app:npv_RespondChangeOnDetached="true"
                app:npv_ShowCount="3"
                app:npv_TextColorHint="@color/t1_color"
                app:npv_TextColorNormal="@color/t2_color"
                app:npv_TextColorSelected="@color/b3_color"
                app:npv_TextSizeHint="@dimen/font_20"
                app:npv_TextSizeNormal="16sp"
                app:npv_TextSizeSelected="20sp"
                app:npv_WrapSelectorWheel="true" />

            <TextView
                style="@style/text_t2_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":" />

            <com.sumian.common.widget.picker.NumberPickerView
                android:id="@+id/picker_minute"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_170"
                android:layout_weight="1"
                android:background="@color/b2_color"
                android:visibility="visible"
                app:npv_DividerColor="@color/l1_color"
                app:npv_ItemPaddingHorizontal="5dp"
                app:npv_ItemPaddingVertical="5dp"
                app:npv_RespondChangeOnDetached="true"
                app:npv_ShowCount="3"
                app:npv_TextColorHint="@color/t1_color"
                app:npv_TextColorNormal="@color/t2_color"
                app:npv_TextColorSelected="@color/b3_color"
                app:npv_TextSizeHint="@dimen/font_16"
                app:npv_TextSizeNormal="@dimen/font_16"
                app:npv_TextSizeSelected="@dimen/font_16"
                app:npv_WrapSelectorWheel="true" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_confirm"
        style="@style/text_t1_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_62"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/white"
        android:foreground="@drawable/bg_material_ripple"
        android:gravity="center"
        android:text="@string/sure" />
</LinearLayout>