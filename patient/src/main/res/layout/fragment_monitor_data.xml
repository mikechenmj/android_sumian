<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.sumian.sd.buz.report.widget.histogram.TouchDailySleepHistogramView
                android:id="@+id/day_sleep_histogram_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_200"
                android:gravity="center"
                app:tdshv_deep_color="@color/g1_color_day"
                app:tdshv_empty_text_color="@color/bt_hole_color"
                app:tdshv_eog_color="@color/g2_color_day"
                app:tdshv_light_color="@color/g2_color_day"
                app:tdshv_sober_color="@color/g3_color_day" />

            <com.sumian.sd.buz.report.widget.ReportIndicatorRuleView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_26" />

            <androidx.cardview.widget.CardView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_24"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginBottom="1dp"
                app:cardBackgroundColor="@color/examine_grey_background"
                app:cardCornerRadius="@dimen/space_4"
                app:cardElevation="0dp"
                app:contentPaddingLeft="@dimen/space_20"
                app:contentPaddingBottom="@dimen/space_20"
                app:contentPaddingRight="@dimen/space_20">

                <com.sumian.sd.buz.report.widget.ReportSleepDurationView
                    android:id="@+id/report_sleep_duration_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
</FrameLayout>