<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_94"
    android:background="@color/b2_color"
    android:foreground="@drawable/bg_material_ripple">

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_t1_16"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="第1周 认识睡眠" />

    <com.sumian.sd.buz.cbti.widget.CBTIProgressView
        android:id="@+id/cbti_progress_view"
        android:layout_width="@dimen/space_18"
        android:layout_height="@dimen/space_18"
        android:layout_marginTop="@dimen/space_10"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toLeftOf="@id/tv_progress"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_progress"
        style="@style/text_b3_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        app:layout_constraintLeft_toRightOf="@id/cbti_progress_view"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="进度：45%" />

    <ImageView
        android:id="@+id/iv_nav"
        android:layout_width="@dimen/space_8"
        android:layout_height="@dimen/space_16"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_20"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_record_icon_right"
        tools:ignore="RtlHardcoded" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginStart="@dimen/space_20"
        android:background="@color/l1_color"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>