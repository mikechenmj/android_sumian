<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_content_bg_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/hw_colorPrimary"
        android:paddingTop="@dimen/space_24">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:layout_gravity="center|left"
            android:background="@drawable/bg_material_ripple"
            android:contentDescription="@null"
            android:padding="@dimen/space_16"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_back"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_material_ripple"
            android:gravity="center"
            android:padding="@dimen/space_12"
            android:text="睡眠障碍评估表"
            android:textColor="@color/bt_hole_color"
            android:textSize="@dimen/font_20"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/iv_re_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:text="重做"
            android:textColor="@color/bt_hole_color"
            android:textSize="@dimen/font_16"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_content_bg_color">

        <WebView
            android:id="@+id/web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/finish_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/space_110"
                android:layout_height="@dimen/space_110"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_100"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_upgrade_icon_newest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_30"
                android:text="已完成评估"
                android:textColor="@color/bt_hole_color"
                android:textSize="@dimen/font_18" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_finish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_marginRight="@dimen/space_30"
                android:layout_marginTop="@dimen/space_114"
                android:background="@drawable/bt_circle_bg"
                android:text="@string/finish"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18" />

        </LinearLayout>

    </FrameLayout>
</LinearLayout>