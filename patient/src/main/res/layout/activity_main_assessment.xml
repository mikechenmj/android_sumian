<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <com.sumian.sd.widget.TitleBar
        android:id="@+id/examine_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hw_colorPrimary"
        android:paddingTop="@dimen/status_bar_height"
        app:tb_dark_theme="true"
        app:text="速眠助手"
        app:text_size="@dimen/font_20" />

    <FrameLayout
        android:id="@+id/pop_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff521823"
        android:visibility="gone"
        tools:visibility="visible">
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff212329">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/space_64"
            android:clipToPadding="true"
            android:paddingTop="@dimen/space_4">

            <LinearLayout
                android:id="@+id/lay_msg_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/space_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/bg_chat_left"
                    android:padding="@dimen/space_10"
                    android:text="Hi，我是您的睡眠助手小眠！"
                    android:textColor="@color/bt_hole_color"
                    android:textSize="@dimen/font_14"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/space_14"
                    android:background="@drawable/bg_chat_left"
                    android:lineSpacingExtra="@dimen/space_2"
                    android:padding="@dimen/space_10"
                    android:text="小眠要为您匹配睡眠模式，要对您的睡眠情况进行评估，需要您填写个人信息以及睡眠障碍评估表，不知您意下如何？"
                    android:textColor="@color/bt_hole_color"
                    android:textSize="@dimen/font_14"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/space_14"
                    android:background="@drawable/bg_chat_right"
                    android:padding="@dimen/space_10"
                    android:text="个人信息表"
                    android:textColor="#ffbfc9d4"
                    android:textSize="@dimen/font_14"
                    android:visibility="gone"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <LinearLayout
                    android:id="@+id/lay_show_user_info_table"
                    android:layout_width="@dimen/space_140"
                    android:layout_height="@dimen/space_140"
                    android:layout_gravity="left|center"
                    android:layout_marginTop="@dimen/space_14"
                    android:background="@drawable/bg_chat_left"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_user_info"
                        android:layout_width="@dimen/space_64"
                        android:layout_height="@dimen/space_64"
                        android:contentDescription="@null"
                        android:src="@drawable/chatbubble_icon_info"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chat_left"
                        android:paddingStart="@dimen/space_10"
                        android:paddingTop="@dimen/space_10"
                        android:paddingEnd="@dimen/space_10"
                        android:text="个人信息"
                        android:textColor="@color/bt_hole_color"
                        android:textSize="@dimen/font_14"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_show_sleep_assessment_table"
                    android:layout_width="@dimen/space_140"
                    android:layout_height="@dimen/space_140"
                    android:layout_gravity="left|center"
                    android:layout_marginTop="@dimen/space_14"
                    android:background="@drawable/bg_chat_left"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_sleep_assessment"
                        android:layout_width="@dimen/space_64"
                        android:layout_height="@dimen/space_64"
                        android:contentDescription="@null"
                        android:src="@drawable/chatbubble_icon_evaluationform"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chat_left"
                        android:paddingStart="@dimen/space_10"
                        android:paddingTop="@dimen/space_10"
                        android:paddingEnd="@dimen/space_10"
                        android:text="睡眠障碍评估表"
                        android:textColor="@color/bt_hole_color"
                        android:textSize="@dimen/font_14"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/lay_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/space_20"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/bt_user_info_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_8"
                android:background="@drawable/bt_assessment_shape"
                android:gravity="center"
                android:text="个人信息表"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"
                tools:ignore="ButtonStyle,HardcodedText"
                tools:visibility="visible" />

            <Button
                android:id="@+id/bt_assessment_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:background="@drawable/bt_assessment_shape"
                android:gravity="center"
                android:paddingLeft="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                android:text="睡眠障碍评估表"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"
                tools:ignore="ButtonStyle,HardcodedText"
                tools:visibility="visible" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>