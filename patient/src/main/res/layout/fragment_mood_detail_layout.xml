<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.sumian.sd.buz.anxiousandfaith.databinding.FragmentMoodDetailData" />
    </data>

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_mood_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_interval"
                android:background="@color/normal_item_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mood_detail_emotion"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/normal_padding"
                    android:layout_marginTop="11.5dp"
                    android:layout_marginEnd="@dimen/normal_padding"
                    android:layout_marginBottom="11.5dp"
                    android:scaleType="fitStart"
                    android:src="@{context.getDrawable(data.moodDiaryEmotionResId)}"
                    tools:src="@drawable/mood_diary_icon_facial3_selected" />

                <TextView
                    android:id="@+id/tv_mood_detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@{data.moodDiaryTextId}"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    tools:text="@string/mood_diary_angry_text" />
            </LinearLayout>

            <com.sumian.common.widget.SumianFlexboxLayout
                android:id="@+id/fb_mood_diary_sad_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_line_top_l1_margin_start_20dp_white_bg"
                android:padding="@dimen/normal_padding"
                app:adapter="@{data.moodLabelAdapter}"
                app:dividerDrawable="@drawable/flex_box_space_divider"
                app:flexWrap="wrap"
                app:showDivider="middle" />

            <TextView
                android:id="@+id/tv_mood_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_interval"
                android:background="@drawable/bg_line_l1_margin_start_20dp_white_bg"
                android:gravity="center_vertical"
                android:padding="@dimen/normal_padding"
                android:text="@string/mood_detail_title_text"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_mood_detail_content"
                style="@style/SumianEditTextWhiteBg"
                android:layout_height="wrap_content"
                android:hint="@{data.moodDiaryPositive ?@string/mood_detail_positive_content_hint : @string/mood_detail_negative_content_hint}"
                android:minHeight="90dp"
                android:padding="20dp"
                android:text="@={data.detailText}"
                android:textColorHint="@{data.detailHintColor}"
                tools:ignore="Autofill,TextFields"
                tools:text="@string/mood_detail_negative_content_hint" />

            <TextView
                android:id="@+id/tv_mood_detail_content_count"
                style="@style/text_t2_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical|end"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:text="@{data.detailTextCount}"
                android:textColor="@{data.detailTextCountOutOfMax ? @color/t4_color : @color/t2_color}"
                tools:ignore="HardcodedText"
                tools:text="0/200" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_mood_diary_save"
                style="@style/SumianButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="20dp"
                android:background="@{data.moodDiaryPositive ? @drawable/bg_bt : @drawable/bg_btn_white}"
                android:clickable="@{data.saveButtonClickable}"
                android:onClick="@{() -> data.saveMoodDiary()}"
                android:text="@string/save"
                android:textColor="@{data.moodDiaryPositive ? @color/sel_btn_text : @color/t1_color}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_mood_diary_next"
                style="@style/SumianButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="20dp"
                android:clickable="@{data.saveButtonClickable}"
                android:onClick="@{() -> data.challengeUnreasonableBelief()}"
                android:text="@string/mood_diary_challenge_unreasonable_belief_title"
                android:visibility="@{data.moodDiaryPositive ? View.GONE : View.VISIBLE}" />
        </LinearLayout>

    </ScrollView>

</layout>