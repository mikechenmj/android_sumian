<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b1_color"
    android:orientation="vertical">

    <com.sumian.sd.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:show_back="true"
        app:text="问题详情" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/space_62">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.sumian.sd.widget.text.CountInputLengthEditTextView
                        android:id="@+id/et_input"
                        style="@style/text_t1_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_20"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:gravity="start"
                        android:hint="@string/input_question_hint"
                        android:inputType="textMultiLine"
                        android:maxHeight="@dimen/space_150"
                        android:minHeight="@dimen/space_150"
                        android:paddingLeft="@dimen/space_20"
                        android:paddingRight="@dimen/space_20"
                        android:textColorHint="@color/t2_color"
                        tools:ignore="Autofill,TextFields" />

                    <TextView
                        android:id="@+id/tv_input_text_count"
                        style="@style/text_t2_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginTop="@dimen/space_10"
                        android:layout_marginEnd="@dimen/space_20"
                        android:layout_marginBottom="@dimen/space_20"
                        android:text="0/500"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/photo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:minHeight="@dimen/space_120">

                    <com.sumian.common.media.widget.PicturesPreviewer
                        android:id="@+id/publish_pictures_previewer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="@dimen/space_20"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/lay_picture_place"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_120"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/iv_take_picture"
                            android:layout_width="@dimen/space_80"
                            android:layout_height="@dimen/space_80"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/space_20"
                            android:layout_marginEnd="@dimen/space_20"
                            android:contentDescription="@null"
                            app:srcCompat="@mipmap/ic_advisory_btn_uploadphoto" />

                        <TextView
                            style="@style/text_t2_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/space_20"
                            android:lineSpacingExtra="@dimen/space_2"
                            android:text="@string/take_picture" />

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/lay_report"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_64"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/text_t1_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/space_20"
                        android:text="@string/select_report" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_report_count"
                        style="@style/text_t2_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/space_20"
                        android:textColor="@color/t4_color"
                        tools:ignore="HardcodedText"
                        tools:text="已选择1份" />

                    <ImageView
                        android:layout_width="@dimen/space_10"
                        android:layout_height="@dimen/space_16"
                        android:layout_gravity="center|right"
                        android:layout_marginStart="@dimen/space_20"
                        android:layout_marginEnd="@dimen/space_20"
                        android:contentDescription="@null"
                        app:srcCompat="@mipmap/ic_record_icon_right"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.sumian.sd.buz.tel.widget.ServiceSuccessStateView
            android:id="@+id/service_state_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_service_submit"
            style="@style/text_b2_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_62"
            android:layout_gravity="bottom"
            android:background="@color/b3_color_day"
            android:gravity="center"
            android:text="@string/tel_submit"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

</LinearLayout>