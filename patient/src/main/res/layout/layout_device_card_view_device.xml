<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_marginTop="60dp"
    tools:background="@color/white"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_t3_16"
                    android:text="@string/monitor" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_monitor_status"
                    style="@style/text_t2_14"
                    android:padding="2dp"
                    android:text="@string/already_connected" />
            </LinearLayout>

            <com.sumian.sd.buz.device.widget.BatteryView
                android:id="@+id/monitor_battery_view"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <View
            style="@style/VerticalDividerLine"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_t3_16"
                    android:text="@string/speed_sleeper" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_sleep_master_status"
                    style="@style/text_t2_14"
                    android:padding="2dp"
                    android:text="@string/already_connected" />
            </LinearLayout>

            <com.sumian.sd.buz.device.widget.BatteryView
                android:id="@+id/sleeper_battery_view"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_bottom_hint"
        style="@style/text_t2_14"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/monitor_is_connect_please_check_sleepers_connectivity" />

    <LinearLayout
        android:id="@+id/vg_bottom_upgrade_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bottom_upgrade_hint"
            style="@style/text_t2_14"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:drawableStart="@drawable/toast_icon_caveat"
            android:drawablePadding="5dp"
            android:gravity="center"
            tools:text="@string/device_version_too_low" />

        <TextView
            android:id="@+id/tv_bottom_upgrade_hint2"
            style="@style/text_b3_14"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            tools:text="@string/go_to_upgrade_device" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_turn_pa_bt_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <View style="@style/HorizontalDividerLineMarginStart20" />

        <TextView
            style="@style/text_t1_14"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:text="@string/speed_sleeper_already" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_turn_on_pa"
            style="@style/SumianButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:drawablePadding="10dp"
            android:text="@string/start_work" />
    </FrameLayout>

</LinearLayout>