<?xml version="1.0" encoding="utf-8"?>
<com.sumian.common.widget.refresh.SumianSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ssrl_progress_bg_color="@color/l2_color_day"
    app:ssrl_progress_color="@color/n2_color_day">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_fragment_monitor_data_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_content_bg_color">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/hw_colorPrimary"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rv_calender_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:layout_marginTop="@dimen/status_bar_height">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="日"
                            android:textColor="@color/bt_hole_color"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tv_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/general_color"
                            android:layout_centerInParent="true"
                            android:text="周"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_calender"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/report_calendar" />
                </RelativeLayout>

                <com.sumian.sd.buz.diary.sleeprecord.widget.SleepDataDateBar
                    android:id="@+id/date_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/view_pager_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="540dp"
                        android:background="@color/deep_content_bg_color" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/tv_is_syncing_hint"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:background="@color/b5_color"
                            android:gravity="center"
                            android:text="@string/device_is_syncing_data_report_will_be_refresh_later"
                            android:textColor="@color/b2_color"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_sync_fail_hint"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:background="@color/t4_color"
                            android:gravity="center"
                            android:text="@string/syncing_error_result"
                            android:textColor="@color/b2_color"
                            android:visibility="gone"
                            tools:visibility="visible" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_float_diary"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_gravity="right|bottom"
                android:contentDescription="@null"
                android:src="@drawable/report_button_diary" />
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</com.sumian.common.widget.refresh.SumianSwipeRefreshLayout>