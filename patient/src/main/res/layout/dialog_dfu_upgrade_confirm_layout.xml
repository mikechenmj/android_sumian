<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_t3_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_20"
        android:gravity="center"
        android:text="@string/upgrade_success_title_text"
        android:textStyle="bold" />

    <View style="@style/HorizontalDividerLine" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/text_t3_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_20"
        android:gravity="center"
        android:text="@string/upgrade_success_content_text" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_confirm"
        style="@style/SumianButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upgrade_confirm_text"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp" />
</LinearLayout>