<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="140dp"
        android:layout_height="140dp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_patient_icon_information" />


    <TextView
        android:id="@+id/tv_title"
        style="@style/text_t1_16"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        tools:text="Title Title Title Title Title Title Title Title Title Title Title Title " />

    <TextView
        android:id="@+id/tv_content"
        style="@style/text_t2_14"
        android:layout_marginTop="10dp"
        android:gravity="center"
        tools:text="Message message Message message Message message Message message Message message " />

</LinearLayout>